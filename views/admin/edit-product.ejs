<%- include("../../views/partials/admin/footer") %>

<script>
// Global variables
let cropper = null;
let currentImageNumber = null;

// Image handling functions
function viewImage(event, imageNumber) {
    const file = event.target.files[0];
    if (!file) return;
    
    // Reset previous cropper if exists
    if (cropper) {
        cropper.destroy();
        cropper = null;
    }
    
    const reader = new FileReader();
    reader.onload = function(e) {
        // Setup cropper
        const cropperImg = document.getElementById(`croppedImg${imageNumber}`);
        cropperImg.src = e.target.result;
        
        // Show cropper container
        const cropperContainer = document.getElementById(`cropper-container${imageNumber}`);
        cropperContainer.style.display = 'block';
        
        // Initialize cropper after ensuring the image is loaded
        cropperImg.onload = function() {
            cropper = new Cropper(cropperImg, {
                aspectRatio: 1,
                viewMode: 1,
                autoCropArea: 0.8,
                responsive: true,
                restore: false,
                guides: true,
                center: true,
                highlight: true,
                cropBoxMovable: true,
                cropBoxResizable: true,
                toggleDragModeOnDblclick: false,
                ready: function() {
                    console.log("Cropper is ready");
                }
            });
            
            currentImageNumber = imageNumber;
        };
    };
    reader.readAsDataURL(file);
}

// Function to cancel cropping
function cancelCrop(imageNumber) {
    if (cropper) {
        cropper.destroy();
        cropper = null;
    }
    
    // Hide the cropper container
    document.getElementById(`cropper-container${imageNumber}`).style.display = 'none';
    
    // Reset the file input
    document.getElementById(`input${imageNumber}`).value = '';
    
    // Hide the preview
    document.getElementById(`imgView${imageNumber}`).style.display = 'none';
}

// Save cropped image
function saveCroppedImage(imageNumber) {
    if (!cropper) {
        console.error("No active cropper found");
        return;
    }
    
    try {
        const canvas = cropper.getCroppedCanvas({
            width: 440,
            height: 440,
            imageSmoothingEnabled: true,
            imageSmoothingQuality: 'high'
        });
        
        if (!canvas) {
            console.error("Could not create canvas");
            return;
        }
        
        // Show the preview image with cropped result
        const imgView = document.getElementById(`imgView${imageNumber}`);
        imgView.src = canvas.toDataURL('image/jpeg');
        imgView.style.display = 'block';
        
        // Hide the cropper container
        document.getElementById(`cropper-container${imageNumber}`).style.display = 'none';
        
        // Convert canvas to blob and update file input
        canvas.toBlob((blob) => {
            const file = new File([blob], `cropped-image-${imageNumber}.jpg`, { type: 'image/jpeg' });
            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);
            document.getElementById(`input${imageNumber}`).files = dataTransfer.files;
            
            // Clean up
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }
        }, 'image/jpeg', 0.95);
    } catch (error) {
        console.error("Error during cropping:", error);
        alert("Error during image cropping. Please try again.");
    }
}

// Delete single image function
function deleteSingleImage(imageName, productId) {
    if (!confirm('Are you sure you want to delete this image?')) {
        return;
    }
    
    const imageElement = document.querySelector(`.delete-image-btn[data-image="${imageName}"]`);
    if (!imageElement) {
        console.error("Could not find image element to delete");
        return;
    }
    
    // Create a loading spinner
    const spinner = document.createElement('span');
    spinner.className = 'spinner';
    imageElement.parentNode.appendChild(spinner);
    imageElement.disabled = true;
    
    fetch(`/admin/deleteSingleImage/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ imageName: imageName })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const imageContainer = imageElement.closest('.image-item');
            if (imageContainer) {
                imageContainer.remove();
                
                // Check if there are no images left
                const remainingImages = document.querySelectorAll('.image-item');
                if (remainingImages.length === 0) {
                    const imagesContainer = document.getElementById('current-images-container');
                    imagesContainer.innerHTML = '<div class="col-12 no-images-message"><p>No images available</p></div>';
                }
            }
        } else {
            alert('Error deleting image: ' + (data.message || 'Unknown error'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error deleting image. Please try again.');
    })
    .finally(() => {
        if (spinner.parentNode) {
            spinner.remove();
        }
        if (imageElement) {
            imageElement.disabled = false;
        }
    });
}

// Setup event listeners when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
    // Save button click handlers for each image
    document.getElementById('saveButton1').addEventListener('click', () => saveCroppedImage(1));
    document.getElementById('saveButton2').addEventListener('click', () => saveCroppedImage(2));
    document.getElementById('saveButton3').addEventListener('click', () => saveCroppedImage(3));
    document.getElementById('saveButton4').addEventListener('click', () => saveCroppedImage(4));
    
    // Set up delete image buttons
    const deleteButtons = document.querySelectorAll('.delete-image-btn');
    deleteButtons.forEach(button => {
        button.addEventListener('click', function() {
            const imageName = this.getAttribute('data-image');
            const productId = this.getAttribute('data-product');
            if (imageName && productId) {
                deleteSingleImage(imageName, productId);
            }
        });
    });
});
</script>