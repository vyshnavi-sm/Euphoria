<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/customer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include("../../views/partials/admin/header") %>

<div class="main-content">
    <div class="container">
        <h2>Customers</h2>
        <!-- Search and Filters -->
        <div class="top-controls">
            <form action="/admin/customers" method="GET" class="search-box">
                <input type="text" name="search" placeholder="Search here" value="<%= searchQuery %>">
                <button type="submit"><i class="fas fa-search"></i></button>
                <% if (searchQuery) { %>
                    <a href="/admin/customers" class="clear-btn">
                        <i class="fas fa-times"></i> Clear
                    </a>
                <% } %>
            </form>
        </div>
        <!-- Customer Table -->
        <table class="customer-table">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Customer ID</th>
                    <th>Orders</th>
                    <th>Balance</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (data && data.length > 0) { %>
                    <% for (let i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= data[i].name %></td>
                            <td><%= data[i].customerId || 'N/A' %></td>
                            <td><%= data[i].orders || 0 %></td>
                            <td>â‚¹ <%= data[i].balance || 0 %></td>
                            <td>
                                <span class="status <%= data[i].isBlocked ? 'blocked' : 'active' %>">
                                    <%= data[i].isBlocked ? 'Blocked' : 'Active' %>
                                </span>
                            </td>
                            <td>
                                <% if (!data[i].isBlocked) { %>
                                    <button class="btn btn-danger" onclick="confirmBlock('<%= data[i]._id %>')">Block</button>
                                <% } else { %>
                                    <button class="btn btn-success" onclick="confirmUnblock('<%= data[i]._id %>')">Unblock</button>
                                <% } %>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No customers found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <!-- Pagination -->
        <div class="pagination">
            <span>Show results:</span>
            <select>
                <option>2</option>
                <option>5</option>
                <option>10</option>
            </select>
            <div class="page-controls">
                <a href="/admin/customers?page=1&search=<%= searchQuery %>" class="<%= currentPage === 1 ? 'active' : '' %>">1</a>
                <% if (currentPage > 4) { %>
                    <span>...</span>
                <% } %>
                <% for (let i = Math.max(2, currentPage - 1); i <= Math.min(totalPages - 1, currentPage + 1); i++) { %>
                    <a href="/admin/customers?page=<%= i %>&search=<%= searchQuery %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                <% } %>
                <% if (currentPage < totalPages - 3) { %>
                    <span>...</span>
                <% } %>
                <% if (totalPages > 1) { %>
                    <a href="/admin/customers?page=<%= totalPages %>&search=<%= searchQuery %>" class="<%= currentPage === totalPages ? 'active' : '' %>"><%= totalPages %></a>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmBlock(userId) {
        Swal.fire({
            title: "Are you sure?",
            text: "You are about to block this customer!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, Block it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/blockCustomer?id=${userId}`;
            }
        });
    }
    function confirmUnblock(userId) {
        Swal.fire({
            title: "Are you sure?",
            text: "You are about to unblock this customer!",
            icon: "info",
            showCancelButton: true,
            confirmButtonColor: "#28a745",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, Unblock it!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/unblockCustomer?id=${userId}`;
            }
        });
    }
</script>

<!-- Remove or update any conflicting styles for .topbar, .sidebar, .main-content here. -->
<style>
    /* Only keep table, search, and status styles. Remove layout styles that conflict with admin header partial. */
    .customer-table {
        width: 100%;
        border-collapse: collapse;
    }
    .customer-table thead {
        background: #5D4037;
        color: white;
    }
    .customer-table th, .customer-table td {
        padding: 12px;
        text-align: left;
    }
    .customer-table tbody tr {
        border-bottom: 1px solid #ddd;
    }
    .status {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        display: inline-block;
    }
    .status.active {
        background: #e3f8e0;
        color: #2a7a1e;
    }
    .status.blocked {
        background: #fde6e6;
        color: #a60000;
    }
    .search-box {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .search-box input {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
    }
    .search-box button {
        padding: 8px 12px;
        background-color: #5c3d2e;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    .clear-btn {
        padding: 8px 12px;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
    }
    .clear-btn:hover {
        background-color: #c82333;
    }
    .pagination {
        display: flex;
        align-items: center;
        margin-top: 20px;
    }
    .pagination select {
        margin: 0 10px;
    }
    .page-controls {
        display: flex;
        align-items: center;
        background: #d1d1d1;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
    }
    .page-controls span {
        margin: 0 5px;
    }
    .page-controls .active {
        background: #916c30;
        color: #fff;
        border-radius: 3px;
        padding: 2px 8px;
    }
    /* --- Sidebar compactness overrides for this page only --- */
    .sidebar {
        width: 240px !important;
        min-width: 240px !important;
        padding-top: 20px;
    }
    .main-content {
        margin-left: 240px !important;
        width: calc(100% - 240px) !important;
    }
    .nav-menu a {
        font-size: 0.90rem !important;
        padding: 6px 16px !important;
        gap: 8px !important;
        min-height: 28px !important;
        line-height: 1.1 !important;
    }
    .nav-menu i {
        font-size: 1.05rem !important;
        min-width: 20px;
        text-align: center;
    }
    /* Remove previous text hiding and tooltip styles */
    .nav-menu a span, .nav-menu a .menu-text {
        display: inline !important;
        position: static !important;
        background: none !important;
        color: inherit !important;
        padding: 0 !important;
        border-radius: 0 !important;
        box-shadow: none !important;
    }
    .nav-menu a {
        justify-content: flex-start;
    }
    @media (max-width: 992px) {
        .sidebar {
            width: 220px !important;
            min-width: 220px !important;
        }
        .main-content {
            margin-left: 0 !important;
            width: 100% !important;
        }
    }
</style>

</body>
</html>
