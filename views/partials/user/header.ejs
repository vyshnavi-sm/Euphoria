<body>
    <section class="hero">
        <nav class="navbar">
            <div class="nav-left">
                <div class="brand-name">EUPHORIA</div>
                <div class="nav-links">
                    <a href="/">Home</a>
                    <a href="/shop">Shop</a>
                </div>
            </div>
            <button class="navbar-toggle" aria-label="Toggle navigation" aria-expanded="false">
                <i class="fa fa-bars"></i>
            </button>
            <div style="flex:1"></div>
            <div class="nav-right">
                <% if (user) { %>
                    <div class="dropdown">
                        <a href="#" class="user-button dropdown-toggle"><%= user.name %></a>
                        <div class="dropdown-content">
                            <a href="/userProfile"><i class="fas fa-user"></i> Profile</a>
                            <a href="/logout" class="logout-link"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </div>
                    <span class="divider">|</span>
                    <a href="/user/cart" aria-label="Shopping Cart"><i class="fas fa-shopping-cart"></i></a>
                    <a href="/user/wishlist" aria-label="Wishlist"><i class="fas fa-heart"></i></a>
                <% } else { %>
                    <a href="/login" class="user-button">Login</a>
                    <span class="divider">|</span>
                    <a href="/user/cart" aria-label="Shopping Cart"><i class="fas fa-shopping-cart"></i></a>
                    <a href="/user/wishlist" aria-label="Wishlist"><i class="fas fa-heart"></i></a>
                <% } %>
