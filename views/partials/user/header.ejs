<script>
document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.querySelector('.navbar-toggle');
    const navLinks = document.querySelector('.nav-links');
    const mobileOverlay = document.getElementById('mobileMenuOverlay');
    const dropdown = document.querySelector('.dropdown');
    const dropdownToggle = document.querySelector('.dropdown-toggle');
    const dropdownContent = document.querySelector('.dropdown-content');
    
    // Mobile menu functionality
    if (toggle && navLinks) {
        toggle.addEventListener('click', function() {
            const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
            
            // Toggle menu
            navLinks.classList.toggle('show');
            mobileOverlay.classList.toggle('show');
            
            // Update aria-expanded
            toggle.setAttribute('aria-expanded', !isExpanded);
            
            // Update icon
            const icon = toggle.querySelector('i');
            if (icon) {
                icon.className = isExpanded ? 'fa fa-bars' : 'fa fa-times';
            }
        });
        
        // Close menu when clicking overlay
        mobileOverlay.addEventListener('click', function() {
            navLinks.classList.remove('show');
            mobileOverlay.classList.remove('show');
            toggle.setAttribute('aria-expanded', 'false');
            const icon = toggle.querySelector('i');
            if (icon) {
                icon.className = 'fa fa-bars';
            }
        });
        
        // Close menu when clicking on a link (mobile)
        navLinks.addEventListener('click', function(e) {
            if (e.target.tagName === 'A') {
                navLinks.classList.remove('show');
                mobileOverlay.classList.remove('show');
                toggle.setAttribute('aria-expanded', 'false');
                const icon = toggle.querySelector('i');
                if (icon) {
                    icon.className = 'fa fa-bars';
                }
            }
        });
        
        // Close menu on window resize (if screen becomes larger)
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                navLinks.classList.remove('show');
                mobileOverlay.classList.remove('show');
                toggle.setAttribute('aria-expanded', 'false');
                const icon = toggle.querySelector('i');
                if (icon) {
                    icon.className = 'fa fa-bars';
                }
            }
        });
        
        // Keyboard navigation support
        toggle.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                toggle.click();
            }
        });
    }
    
    // Dropdown functionality
    if (dropdown && dropdownToggle && dropdownContent) {
        let isDropdownOpen = false;
        
        // Toggle dropdown on click (for mobile and accessibility)
        dropdownToggle.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            if (window.innerWidth <= 768) {
                // Mobile behavior - toggle dropdown
                isDropdownOpen = !isDropdownOpen;
                if (isDropdownOpen) {
                    dropdownContent.style.display = 'block';
                    // Add overlay for mobile
                    const dropdownOverlay = document.createElement('div');
                    dropdownOverlay.className = 'dropdown-overlay';
                    dropdownOverlay.style.cssText = `
                        position: fixed;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                        background: rgba(0,0,0,0.5);
                        z-index: 999;
                    `;
                    document.body.appendChild(dropdownOverlay);
                    
                    // Close dropdown when clicking overlay
                    dropdownOverlay.addEventListener('click', function() {
                        dropdownContent.style.display = 'none';
                        isDropdownOpen = false;
                        document.body.removeChild(dropdownOverlay);
                    });
                } else {
                    dropdownContent.style.display = 'none';
                    const overlay = document.querySelector('.dropdown-overlay');
                    if (overlay) {
                        document.body.removeChild(overlay);
                    }
                }
            }
        });
        
        // Desktop hover behavior
        if (window.innerWidth > 768) {
            dropdown.addEventListener('mouseenter', function() {
                dropdownContent.style.display = 'block';
            });
            
            dropdown.addEventListener('mouseleave', function() {
                dropdownContent.style.display = 'none';
            });
        }
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!dropdown.contains(e.target)) {
                dropdownContent.style.display = 'none';
                isDropdownOpen = false;
                const overlay = document.querySelector('.dropdown-overlay');
                if (overlay) {
                    document.body.removeChild(overlay);
                }
            }
        });
        
        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                // Switch to hover behavior on desktop
                dropdownContent.style.display = 'none';
                isDropdownOpen = false;
                const overlay = document.querySelector('.dropdown-overlay');
                if (overlay) {
                    document.body.removeChild(overlay);
                }
            }
        });
        
        // Keyboard navigation for dropdown
        dropdownToggle.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                dropdownToggle.click();
            }
        });
        
        // Handle dropdown links
        dropdownContent.addEventListener('click', function(e) {
            if (e.target.tagName === 'A') {
                // Close dropdown after clicking a link
                dropdownContent.style.display = 'none';
                isDropdownOpen = false;
                const overlay = document.querySelector('.dropdown-overlay');
                if (overlay) {
                    document.body.removeChild(overlay);
                }
            }
        });
    }
});
</script>