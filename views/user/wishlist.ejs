  }
}

/* Small Mobile Phones */
@media (max-width: 360px) {
  .main-container {
    padding: 8px;
  }
  
  .wishlist-title {
    font-size: 1.6rem;
  }
  
  .product-card {
    min-height: 320px;
    padding: 10px;
  }
  
  .product-card img {
    height: 120px;
  }
  
  .product-card h4 {
    font-size: 0.95rem;
  }
  
  .product-card p {
    font-size: 0.85rem;
  }
  
  .add-to-cart-btn {
    padding: 7px 12px;
    font-size: 11px;
    min-height: 32px;
  }
  
  .shop-btn {
    padding: 7px 18px;
    font-size: 11px;
  }
  
