@media (max-width: 768px) {
  .main-container {
    padding: 12px;
  }
  
  .wishlist-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 15px;
  }
  
  .wishlist-title {
    font-size: 2rem;
  }
  
  .product-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }
  
  .product-card {
    min-height: 360px;
    padding: 15px;
  }
  
  .product-card img {
    height: 160px;
  }
  
  .product-card h4 {
    font-size: 1.1rem;
  }
  
  .add-to-cart-btn {
    padding: 10px 16px;
    font-size: 13px;
    min-height: 40px;
  }
  
  .shop-btn {
    padding: 10px 25px;
    font-size: 13px;
  }
  
  .empty-wishlist {
    padding: 30px 15px;
  }
  
  .empty-wishlist h2 {
    font-size: 1.6rem;
  }
  
  .empty-wishlist p {
    font-size: 1rem;
  }
  
  .toast {
    bottom: 15px;
    right: 15px;
    left: 15px;
    max-width: none;
  }
}

/* Mobile Phones */
@media (max-width: 480px) {
  .main-container {
    padding: 10px;
  }
  
  .wishlist-header {
    margin-bottom: 20px;
    padding-bottom: 15px;
  }
  
  .wishlist-title {
    font-size: 1.8rem;
  }
  
  .product-grid {
    grid-template-columns: 1fr;
    gap: 15px;
  }
  
  .product-card {
    min-height: 340px;
    padding: 12px;
  }
  
  .product-card img {
    height: 140px;
  }
  
  .product-card h4 {
    font-size: 1rem;
    margin: 8px 0;
  }
  
  .product-card p {
    font-size: 0.9rem;
    margin: 8px 0;
  }
  
  .product-card p.description {
    height: 35px;
  }
  
  .add-to-cart-btn {
    padding: 8px 14px;
    font-size: 12px;
    min-height: 35px;
  }
  
  .shop-btn {
    padding: 8px 20px;
    font-size: 12px;
    width: 100%;
    justify-content: center;
  }
  
  .remove-wishlist-btn {
    width: 30px;
    height: 30px;
    top: 8px;
    right: 8px;
  }
  
  .price-info {
    gap: 6px;
    margin: 8px 0;
  }
  
  .sale-price {
