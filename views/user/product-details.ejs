  // Expose the wishlist toggle function to global scope
  window.toggleWishlist = toggleWishlist;

  // Check wishlist status when page loads
  const checkWishlistStatus = async () => {
    const productId = addToCartBtn.dataset.productId;
    try {
      const response = await fetch(`/user/wishlist/status/${productId}`);
      if (response.status === 401) {
        // User not logged in - just initialize as not in wishlist
        updateWishlistButton(false);
      } else {
        const data = await response.json();
        updateWishlistButton(data.isInWishlist);
      }
    } catch (error) {
      console.error('Error checking wishlist status:', error);
    }
  };

  checkWishlistStatus();

  // Update wishlist button UI based on status
  function updateWishlistButton(isInWishlist) {
    const wishlistBtn = document.getElementById('wishlistBtn');
    const wishlistText = document.getElementById('wishlistText');
    const heartIcon = wishlistBtn.querySelector('i');
    
    if (isInWishlist) {
      wishlistBtn.classList.add('active');
      heartIcon.className = 'fas fa-heart';
      wishlistText.textContent = 'Remove from Wishlist';
    } else {
      wishlistBtn.classList.remove('active');
      heartIcon.className = 'far fa-heart';
      wishlistText.textContent = 'Add to Wishlist';
    }
  }

  // Toast notification function
  function showToast(message, type = 'success') {
    const toast = document.createElement('div');
    toast.className = `toast ${type}`;
    toast.textContent = message;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 3000);
  }

  // Handle post-login returns from session storage
  const checkPendingActions = () => {
    // Check if we have a pending cart item
    const pendingCartItem = sessionStorage.getItem('pendingCartItem');
    if (pendingCartItem) {
      const cartData = JSON.parse(pendingCartItem);
      // Clear the pending item
      sessionStorage.removeItem('pendingCartItem');
      
      // Add the item to cart automatically
      fetch('/user/cart/add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          productId: cartData.productId,
          quantity: cartData.quantity
        })
      }).then(response => {
        if (response.ok) {
          Swal.fire({
            title: 'Success!',
            text: 'Product has been added to your cart',
            icon: 'success',
            confirmButtonColor: '#a97155',
            timer: 2000,
            showConfirmButton: false
          });
        }
      }).catch(error => {
        console.error('Error adding pending item to cart:', error);
      });
    }
    
    // Check if we have a pending wishlist item
    const pendingWishlistItem = sessionStorage.getItem('pendingWishlistItem');
    if (pendingWishlistItem) {
      const wishlistData = JSON.parse(pendingWishlistItem);
      // Clear the pending item
      sessionStorage.removeItem('pendingWishlistItem');
      
      // Add the item to wishlist automatically
      fetch('/user/wishlist/toggle', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          productId: wishlistData.productId
        })
      }).then(response => {
        if (response.ok) {
          // Refresh wishlist status
          checkWishlistStatus();
          showToast('Product added to wishlist');
        }
      }).catch(error => {
        console.error('Error adding pending item to wishlist:', error);
      });
    }
  };
  
  // Run this on page load to check for pending actions after login
  checkPendingActions();
});
</script>

