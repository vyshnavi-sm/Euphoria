    transition: all 0.3s ease;
    margin-bottom: 20px;
}

.home-button i {
    font-size: 16px;
}

.home-button:hover {
    background-color: #8b5e3c;
    border-color: #8b5e3c;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(169, 113, 85, 0.2);
}

/* Product Name Styles */
.product-name {
    font-family: 'Playfair Display', serif;
    font-size: 24px;
    font-weight: 600;
