  }
  .product-detail.accordion-detail {
    max-width: 100%;
    padding: 0 5px;
  }
}

/* Product Meta Styles */
.product-meta {
    margin-top: 25px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.product-meta li {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    padding: 10px 0;
    border-bottom: 1px solid #e9ecef;
    font-family: 'Cormorant Garamond', serif;
}

.product-meta li:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.meta-label {
    min-width: 100px;
    font-weight: 600;
    color: #333;
    font-size: 14px;
}

.meta-value {
    color: #666;
    font-size: 14px;
}

.meta-value a {
    color: #a97155;
    text-decoration: none;
    transition: color 0.3s ease;
}

.meta-value a:hover {
    color: #8b5e3c;
    text-decoration: underline;
}

.meta-value.in-stock {
    color: #28a745;
    font-weight: 500;
}

.meta-value.color-gold {
    display: inline-flex;
    align-items: center;
}

/* Rating Styles */
.rating-container {
    display: flex;
    align-items: center;
    gap: 15px;
    margin: 20px 0;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.rating-stars {
    display: flex;
    gap: 5px;
}

.rating-stars i {
    color: #ffc107;
    font-size: 18px;
}

.rating-stars i.far {
    color: #ddd;
}

.rating-count {
    color: #666;
    font-size: 16px;
    font-weight: 500;
    font-family: 'Cormorant Garamond', serif;
}

.rating-value {
    font-weight: 600;
    color: #333;
    font-size: 18px;
    margin-right: 5px;
}

/* Product Highlights Styles */
.product-highlights {
    margin: 30px 0;
    padding: 25px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
}

.highlights-title {
    font-size: 18px;
    color: #333;
    font-weight: 600;
    margin-bottom: 15px;
    font-family: 'Playfair Display', serif;
    position: relative;
    padding-bottom: 8px;
}

.highlights-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 2px;
    background-color: #a97155;
}

.highlights-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
}

.highlight-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 10px;
    background: #f8f9fa;
    border-radius: 8px;
    transition: transform 0.3s ease;
}

.highlight-item:hover {
    transform: translateY(-2px);
}

.highlight-item i {
    color: #a97155;
    font-size: 16px;
    margin-top: 3px;
}

.highlight-text {
    color: #555;
    font-size: 13px;
    font-family: 'Cormorant Garamond', serif;
    line-height: 1.4;
}

/* Related Products Styles */
.related-products {
    margin: 40px 0;
    padding: 25px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
}

.related-title {
    font-size: 20px;
    color: #333;
    font-weight: 600;
    margin-bottom: 20px;
    font-family: 'Playfair Display', serif;
    text-align: center;
    position: relative;
    padding-bottom: 12px;
}

.related-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background-color: #a97155;
}

.related-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-top: 20px;
}

.related-product {
    background: #fff;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #eee;
}

.related-product:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.related-product img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 10px;
}

.related-product h4 {
    font-size: 14px;
    color: #333;
    margin: 8px 0;
    font-family: 'Playfair Display', serif;
}

.related-product .price {
    color: #a97155;
    font-weight: 600;
    font-size: 16px;
}

@media (max-width: 768px) {
    .highlights-list {
        grid-template-columns: 1fr;
    }
    
    .related-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Toast Styles */
.toast {
    position: fixed;
    bottom: 20px;
    right: 20px;
    padding: 12px 24px;
    border-radius: 8px;
    background-color: #4CAF50;
    color: white;
    font-family: 'Cormorant Garamond', serif;
    z-index: 1000;
    animation: slideIn 0.3s ease-out;
}

.toast.error {
    background-color: #f44336;
}

@keyframes slideIn {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

/* Add this CSS for the plus icon */
.qty-plus-icon {
    font-size: 12px;
    margin-left: 4px;
    color: #a97155;
    vertical-align: middle;
}

