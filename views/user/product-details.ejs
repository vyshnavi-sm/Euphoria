  const quantityElement = document.getElementById('quantity');
  const addToCartBtn = document.getElementById('addToCartBtn');
  const stockError = document.getElementById('stockError');

  // Quantity Controls
  window.increaseQuantity = function() {
    if (currentQuantity < Math.min(maxQuantity, 5)) {
      currentQuantity++;
      updateQuantityDisplay();
      if (currentQuantity > maxQuantity) {
        stockError.classList.add('visible');
        stockError.textContent = `Only ${maxQuantity} items available in stock`;
        addToCartBtn.disabled = true;
      } else {
        stockError.classList.remove('visible');
        addToCartBtn.disabled = maxQuantity <= 0;
      }
    } else {
      showToast(`Maximum quantity per product is 5`, 'error');
    }
  };

  window.decreaseQuantity = function() {
    if (currentQuantity > 1) {
      currentQuantity--;
      updateQuantityDisplay();
      stockError.classList.remove('visible');
      addToCartBtn.disabled = maxQuantity <= 0;
    }
  };

  function updateQuantityDisplay() {
    quantityElement.textContent = currentQuantity;
  }

  // Initialize quantity
  updateQuantityDisplay();

  // Add to Cart functionality with enhanced auth handling
  if (addToCartBtn) {
    addToCartBtn.addEventListener('click', async function(e) {
      e.preventDefault();

      try {
        const response = await fetch('/user/cart/add', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            productId: this.dataset.productId,
            quantity: currentQuantity
          })
        });

        const data = await response.json();
        
        if (response.ok) {
          // Success case
