<script>
  // Initialize zoom
  document.addEventListener('DOMContentLoaded', function() {
    const mainImage = document.getElementById('mainImage');
    const zoomContainer = document.querySelector('.zoom-container');
    
    // Create zoom lens
    const zoomLens = document.createElement('div');
    zoomLens.className = 'zoom-lens';
    zoomContainer.appendChild(zoomLens);
    
    // Create zoom result
    const zoomResult = document.createElement('div');
    zoomResult.className = 'zoom-result';
    document.body.appendChild(zoomResult);
    
    // Initialize zoom functionality
    mainImage.addEventListener('mousemove', function(e) {
        const rect = mainImage.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        // Calculate lens position
        const lensX = x - zoomLens.offsetWidth / 2;
        const lensY = y - zoomLens.offsetHeight / 2;
        
        // Keep lens within image bounds
        const maxX = rect.width - zoomLens.offsetWidth;
        const maxY = rect.height - zoomLens.offsetHeight;
        
        zoomLens.style.left = Math.min(Math.max(0, lensX), maxX) + 'px';
        zoomLens.style.top = Math.min(Math.max(0, lensY), maxY) + 'px';
        
        // Calculate zoom result position
        const resultX = (x / rect.width) * (mainImage.naturalWidth - zoomResult.offsetWidth);
        const resultY = (y / rect.height) * (mainImage.naturalHeight - zoomResult.offsetHeight);
        
        // Set zoom result background
        zoomResult.style.backgroundImage = 'url("' + mainImage.src + '")';
        zoomResult.style.backgroundPosition = '-' + resultX + 'px -' + resultY + 'px';
    });
    
    // Show/hide zoom elements
    mainImage.addEventListener('mouseenter', function() {
        zoomLens.style.display = 'block';
        zoomResult.style.display = 'block';
    });
    
    mainImage.addEventListener('mouseleave', function() {
        zoomLens.style.display = 'none';
        zoomResult.style.display = 'none';
    });
  });

  function changeMainImage(imageSrc) {
    const mainImage = document.getElementById('mainImage');
    const newSrc = '/uploads/product-images/' + imageSrc;
    mainImage.src = newSrc;
    mainImage.setAttribute('data-zoom-image', newSrc);
    
    // Update active thumbnail
    document.querySelectorAll('.thumbnail').forEach(thumb => {
        thumb.classList.remove('active');
        if (thumb.querySelector('img').src.includes(imageSrc)) {
            thumb.classList.add('active');
        }
    });
  }

  // Add this script to the bottom of your product detail page before the closing </body> tag

document.addEventListener('DOMContentLoaded', function() {
  // Initialize variables
  let currentQuantity = 1;
  const maxQuantity = parseInt(document.getElementById('maxQuantity').value);
  const quantityElement = document.getElementById('quantity');
  const addToCartBtn = document.getElementById('addToCartBtn');
  const stockError = document.getElementById('stockError');
  let selectedSize = '';

  // Size Selection
  const sizeButtons = document.querySelectorAll('.size-btn');
  sizeButtons.forEach(button => {
    button.addEventListener('click', function() {
      sizeButtons.forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');
      selectedSize = this.dataset.size;
      
      if (!selectedSize) {
        addToCartBtn.disabled = true;
        addToCartBtn.title = 'Please select a size';
      } else {
        addToCartBtn.disabled = maxQuantity <= 0;
      }
    });
  });

  // Quantity Controls
  window.increaseQuantity = function() {
    if (currentQuantity < maxQuantity) {
      currentQuantity++;
      updateQuantityDisplay();
      if (currentQuantity > maxQuantity) {
        stockError.classList.add('visible');
        stockError.textContent = `Only ${maxQuantity} items available in stock`;
        addToCartBtn.disabled = true;
      } else {
        stockError.classList.remove('visible');
        addToCartBtn.disabled = maxQuantity <= 0 || !selectedSize;
      }
    } else {
      showToast(`Only ${maxQuantity} items available in stock`, 'error');
    }
  };

  window.decreaseQuantity = function() {
    if (currentQuantity > 1) {
      currentQuantity--;
      updateQuantityDisplay();
      stockError.classList.remove('visible');
      addToCartBtn.disabled = maxQuantity <= 0 || !selectedSize;
    }
  };

  function updateQuantityDisplay() {
    quantityElement.textContent = currentQuantity;
  }

  // Initialize quantity
  updateQuantityDisplay();

  // Add to Cart functionality with enhanced auth handling
  if (addToCartBtn) {
    addToCartBtn.addEventListener('click', async function(e) {
      e.preventDefault();
      
      if (!selectedSize) {
        Swal.fire({
          title: 'Select Size',
          text: 'Please select a size before adding to cart',
          icon: 'warning',
          confirmButtonColor: '#a97155'
        });
        return;
      }

      try {
        const response = await fetch('/user/cart/add', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            productId: this.dataset.productId,
            quantity: currentQuantity,
            size: selectedSize
          })
        });

        const data = await response.json();
        
        if (response.ok) {
          // Success case
          Swal.fire({
            title: 'Added to Cart!',
            text: 'Product has been added to your cart',
            icon: 'success',
            confirmButtonColor: '#a97155',
            timer: 2000,
            timerProgressBar: true
          }).then(() => {
            window.location.href = '/user/cart';
          });
        } else if (response.status === 401) {
          // Authentication required case
          Swal.fire({
            title: 'Hello there!',
            text: 'Please sign in to add items to your cart',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#a97155',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Sign In',
            cancelButtonText: 'Continue Shopping'
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = '/login';
            }
          });
        } else {
          showToast(data.message || 'Error adding to cart', 'error');
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
        showToast('Error adding to cart', 'error');
      }
    });
  }

  // Enhanced wishlist functionality with auth handling
  async function toggleWishlist(productId) {
    try {
      const response = await fetch('/user/wishlist/toggle', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId })
      });
      
      const data = await response.json();
      
      if (response.ok) {
        updateWishlistButton(data.isInWishlist);
        showToast(data.message);
      } else if (response.status === 401) {
        // Authentication required case
        Swal.fire({
          title: 'Hello there!',
          text: 'Please sign in to save items to your wishlist',
          icon: 'info',
          showCancelButton: true,
          confirmButtonColor: '#a97155',
          cancelButtonColor: '#6c757d',
          confirmButtonText: 'Sign In',
          cancelButtonText: 'Continue Shopping'
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/login';
          }
        });
      } else {
        Swal.fire({
          title: 'Error',
          text: data.message || 'Could not update wishlist',
          icon: 'error',
          confirmButtonColor: '#a97155'
        });
      }
    } catch (error) {
      console.error('Error toggling wishlist:', error);
      Swal.fire({
        title: 'Hello there!',
        text: 'Please sign in to save items to your wishlist',
        icon: 'info',
        showCancelButton: true,
        confirmButtonColor: '#a97155',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Ok',
        cancelButtonText: 'Continue Shopping'
      });
    }
  }

  // Expose the wishlist toggle function to global scope
  window.toggleWishlist = toggleWishlist;

  // Check wishlist status when page loads
  const checkWishlistStatus = async () => {
    const productId = addToCartBtn.dataset.productId;
    try {
      const response = await fetch(`/user/wishlist/status/${productId}`);
      if (response.status === 401) {
        // User not logged in - just initialize as not in wishlist
        updateWishlistButton(false);
      } else {
        const data = await response.json();
        updateWishlistButton(data.isInWishlist);
      }
    } catch (error) {
      console.error('Error checking wishlist status:', error);
    }
  };

  checkWishlistStatus();

  // Update wishlist button UI based on status
  function updateWishlistButton(isInWishlist) {
    const wishlistBtn = document.getElementById('wishlistBtn');
    const wishlistText = document.getElementById('wishlistText');
    const heartIcon = wishlistBtn.querySelector('i');
    
    if (isInWishlist) {
      wishlistBtn.classList.add('active');
      heartIcon.className = 'fas fa-heart';
      wishlistText.textContent = 'Remove from Wishlist';
    } else {
      wishlistBtn.classList.remove('active');
      heartIcon.className = 'far fa-heart';
      wishlistText.textContent = 'Add to Wishlist';
    }
  }

  // Toast notification function
  function showToast(message, type = 'success') {
    const toast = document.createElement('div');
    toast.className = `toast ${type}`;
    toast.textContent = message;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 3000);
  }

  // Handle post-login returns from session storage
  const checkPendingActions = () => {
    // Check if we have a pending cart item
    const pendingCartItem = sessionStorage.getItem('pendingCartItem');
    if (pendingCartItem) {
      const cartData = JSON.parse(pendingCartItem);
      // Clear the pending item
      sessionStorage.removeItem('pendingCartItem');
      
      // Add the item to cart automatically
      fetch('/user/cart/add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          productId: cartData.productId,
          quantity: cartData.quantity,
          size: cartData.size
        })
      }).then(response => {
        if (response.ok) {
          Swal.fire({
            title: 'Success!',
            text: 'Product has been added to your cart',
            icon: 'success',
            confirmButtonColor: '#a97155',
            timer: 2000,
            showConfirmButton: false
          });
        }
      }).catch(error => {
        console.error('Error adding pending item to cart:', error);
      });
    }
    
    // Check if we have a pending wishlist item
    const pendingWishlistItem = sessionStorage.getItem('pendingWishlistItem');
    if (pendingWishlistItem) {
      const wishlistData = JSON.parse(pendingWishlistItem);
      // Clear the pending item
      sessionStorage.removeItem('pendingWishlistItem');
      
      // Add the item to wishlist automatically
      fetch('/user/wishlist/toggle', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          productId: wishlistData.productId
        })
      }).then(response => {
        if (response.ok) {
          // Refresh wishlist status
          checkWishlistStatus();
          showToast('Product added to wishlist');
        }
      }).catch(error => {
        console.error('Error adding pending item to wishlist:', error);
      });
    }
  };
  
  // Run this on page load to check for pending actions after login
  checkPendingActions();
});
</script>

