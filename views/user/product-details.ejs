    .brand-name {
        font-size: 20px;
    }

    .nav-links {
        display: none;
    }

    .nav-right {
        gap: 10px;
    }

    .nav-right a {
        font-size: 14px;
    }

    .home-button {
        padding: 8px 16px;
        font-size: 14px;
    }

    .product-name {
        font-size: 24px;
        margin: 15px 0;
    }
}

/* Title and Brand Styles */
.title-detail, .product-name {
    font-size: 22px;
    font-weight: 600;
    color: #2b2b2b;
    margin-bottom: 12px;
    letter-spacing: 0.5px;
