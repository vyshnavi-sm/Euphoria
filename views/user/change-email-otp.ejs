<%- include("../../views/partials/user/header") %>
<style>
.content-main {
    background: linear-gradient(135deg, #f8f9fa, #ffffff);
    min-height: 100vh;
    margin-top: 100px;
    padding: 20px;
}

.otp-wrapper {
    max-width: 500px;
    margin: 0 auto;
}

.otp-container {
    background: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    padding: 30px;
}

.otp-container h3 {
    color: #5C4033;
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    font-size: 24px;
    margin-bottom: 25px;
    text-align: center;
}

.form-group {
    margin-bottom: 20px;
}

.form-label {
    color: #5C4033;
    font-family: 'Cormorant Garamond', serif;
    font-size: 16px;
    margin-bottom: 8px;
    display: block;
}

.otp-input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-family: 'Cormorant Garamond', serif;
    font-size: 18px;
    text-align: center;
    letter-spacing: 8px;
    transition: all 0.3s ease;
}

.otp-input:focus {
    border-color: #a97155;
    box-shadow: 0 0 0 0.2rem rgba(169, 113, 85, 0.25);
    outline: none;
}

.btn-primary {
    background-color: #a97155;
    border-color: #a97155;
    color: white;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 600;
    padding: 12px;
    border-radius: 8px;
    width: 100%;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background-color: #8b5e3c;
    border-color: #8b5e3c;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(169, 113, 85, 0.2);
}

.otp-timer {
    text-align: center;
    margin: 15px 0;
    color: #5C4033;
    font-family: 'Cormorant Garamond', serif;
    font-size: 14px;
}

.resend-btn {
    background: none;
    border: none;
    color: #a97155;
    font-family: 'Cormorant Garamond', serif;
    font-size: 14px;
    cursor: pointer;
    text-decoration: underline;
    transition: all 0.3s ease;
    width: 100%;
    text-align: center;
    padding: 10px;
}

.resend-btn:hover {
    color: #8b5e3c;
}

.resend-btn.active {
    color: #6c757d;
    cursor: not-allowed;
    text-decoration: none;
}

.alert {
    border-radius: 8px;
    padding: 12px;
    margin-bottom: 20px;
    font-family: 'Cormorant Garamond', serif;
}

.alert-danger {
    background-color: #f8d7da;
    border-color: #f5c6cb;
    color: #721c24;
}
</style>

<section class="content-main">
    <div class="otp-wrapper">
        <div class="otp-container">
            <h3>Email Verification</h3>
            <form action="/verify-email-otp" method="post" onsubmit="return validateOTPForm()">
                <div class="form-group">
                    <label for="otp" class="form-label">Enter Verification Code</label>
                    <input type="text" id="otp" name="otp" class="otp-input" maxlength="6" required>
                    <div class="error-message" id="otp-error"></div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Verify Code</button>
                </div>
                <div class="otp-timer">
                    <span id="otpTimer">Verification code expires in: 1:00</span>
                </div>
                <button type="button" id="resendBtn" class="resend-btn" onclick="resendOTP()">Resend Verification Code</button>
                <% if (locals.message && message.length > 0) { %>
                    <div class="alert alert-danger mt-3">
                        <%= message %>
                    </div>
                <% } %>
            </form>
        </div>
    </div>
</section>

<script>
let timerInterval;
let timeLeft = 60; // 1 minute in seconds

function validateOTPForm() {
    const otpInput = document.getElementById('otp');
    const otpError = document.getElementById('otp-error');
    const otpValue = otpInput.value.trim();

    if (otpValue === '') {
        otpError.textContent = 'Please enter the verification code.';
        otpInput.classList.add('is-invalid');
        return false;
    } else if (!/^\d{6}$/.test(otpValue)) {
        otpError.textContent = 'Please enter a valid 6-digit verification code.';
        otpInput.classList.add('is-invalid');
        return false;
    } else {
        otpError.textContent = '';
        otpInput.classList.remove('is-invalid');
        return true;
    }
}

function startOTPTimer() {
    const timerDisplay = document.getElementById('otpTimer');
    const resendBtn = document.getElementById('resendBtn');
    
    if (timerInterval) {
        clearInterval(timerInterval);
    }
    
    timeLeft = 60;
    resendBtn.classList.remove('active');
    
    timerInterval = setInterval(() => {
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        
        timerDisplay.textContent = `Verification code expires in: ${minutes}:${seconds.toString().padStart(2, '0')}`;
        
        if (timeLeft <= 0) {
            clearInterval(timerInterval);
            timerDisplay.textContent = 'Verification code expired';
            resendBtn.classList.add('active');
        }
        
        timeLeft--;
    }, 1000);
}

async function resendOTP() {
    const resendBtn = document.getElementById('resendBtn');
    if (resendBtn.classList.contains('active')) return;
    
    resendBtn.classList.remove('active');
    
    try {
        const response = await fetch('/resend-change-email-otp', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'New verification code has been sent to your email',
                timer: 2000,
                showConfirmButton: false
            });
            startOTPTimer();
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: data.message || 'Failed to resend verification code'
            });
            resendBtn.classList.add('active');
        }
    } catch (error) {
        console.error('Error resending OTP:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while resending verification code'
        });
        resendBtn.classList.add('active');
    }
}

// Start the timer when the page loads
document.addEventListener('DOMContentLoaded', startOTPTimer);
</script>

