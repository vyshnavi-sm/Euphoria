<%- include("../../views/partials/user/header") %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
/* Base and Layout Styles */
.main {
  padding: 30px 0;
  background-color: #f8f4f0;
}

.card {
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  border: none;
  background-color: #fff;
}

.card-green {
  background-color: #f8f4f0;
}

.required {
  color: #a97155;
}

/* Dashboard Menu Styles */
.dashboard-menu {
  background-color: #fff;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  border: 1px solid #e8d9c5;
}

.dashboard-menu .nav-link {
  font-weight: 500;
  color: #5C4033;
  padding: 12px 20px;
  margin-bottom: 8px;
  border-radius: 8px;
  transition: all 0.3s ease;
  font-family: 'Cormorant Garamond', serif;
}

.dashboard-menu .nav-link:hover {
  background-color: #f8f4f0;
  color: #a97155;
  transform: translateX(5px);
}

.dashboard-menu .nav-link.active {
  background-color: #a97155;
  color: white;
}

.dashboard-menu .nav-link i {
  margin-right: 10px;
  color: #a97155;
}

/* Card Styles */
.card-header {
  background-color: #a97155;
  color: white;
  border-radius: 10px 10px 0 0;
  padding: 15px 20px;
  font-family: 'Cormorant Garamond', serif;
  font-weight: 600;
}

/* Button Styles */
.btn-success {
  background-color: #a97155;
  border-color: #a97155;
  color: white;
  font-family: 'Cormorant Garamond', serif;
  font-weight: 500;
  padding: 8px 20px;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.btn-success:hover {
  background-color: #8b5e3c;
  border-color: #8b5e3c;
  transform: translateY(-2px);
}

/* Form Styles */
.form-group {
  margin-bottom: 15px;
}

.form-control {
  border: 1px solid #e8d9c5;
  border-radius: 8px;
  padding: 10px 15px;
  font-family: 'Cormorant Garamond', serif;
}

.form-control:focus {
  border-color: #a97155;
  box-shadow: 0 0 0 0.2rem rgba(169, 113, 85, 0.25);
}

/* Breadcrumb Styles */
.page-header.breadcrumb-wrap {
  background-color: #f8f4f0;
  padding: 15px 0;
  border-bottom: 1px solid #e8d9c5;
}

.breadcrumb {
  display: flex;
  align-items: center;
  font-family: 'Cormorant Garamond', serif;
  font-size: 16px;
  color: #5C4033;
}

.breadcrumb a {
  color: #a97155;
  text-decoration: none;
  transition: all 0.3s ease;
}

.breadcrumb a:hover {
  color: #8b5e3c;
  text-decoration: underline;
}

.breadcrumb span {
  margin: 0 8px;
  color: #a97155;
}

/* Table Styles */
.table {
  font-family: 'Cormorant Garamond', serif;
}

.table thead th {
  background-color: #f8f4f0;
  color: #5C4033;
  font-weight: 600;
  border-bottom: 2px solid #e8d9c5;
}

.table tbody td {
  color: #5C4033;
  vertical-align: middle;
}

/* Media Queries */
@media (max-width: 768px) {
  .dashboard-menu {
    padding: 15px;
    margin-bottom: 20px;
  }

  .card {
    margin-bottom: 15px;
  }

  .breadcrumb {
    font-size: 14px;
  }
}
</style>

