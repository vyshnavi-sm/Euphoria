<%- include("../../views/partials/user/header") %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
/* Modal Styles */
.modal-content {
  border-radius: 10px;
  border: none;
  box-shadow: 0 4px 20px rgba(93, 64, 55, 0.15);
  width: 1000px;
}

.modal-header {
  background-color: #5D4037;
  color: white;
  border-radius: 10px 10px 0 0;
  padding: 15px 20px;
  border: none;
}

.modal-header .btn-close {
  color: white;
  filter: brightness(0) invert(1);
}

.modal-body {
  padding: 20px;
  background-color: #fff;
}

.modal-footer {
  border-top: 1px solid #e8d9c5;
  padding: 15px 20px;
  background-color: #f8f4f0;
  border-radius: 0 0 10px 10px;
}

/* Form Styles */
.form-label {
  color: #5D4037;
  font-weight: 500;
  margin-bottom: 8px;
}

.form-control {
  border: 1px solid #e8d9c5;
  border-radius: 8px;
  padding: 10px 15px;
  font-family: 'Cormorant Garamond', serif;
  color: #5D4037;
}

.form-control:focus {
  border-color: #5D4037;
  box-shadow: 0 0 0 0.2rem rgba(93, 64, 55, 0.15);
}

.error-message {
  color: #d32f2f;
  font-size: 0.875rem;
  margin-top: 4px;
}

/* Base and Layout Styles */
.main {
  padding: 30px 0;
  background-color: #f8f4f0;
}

.card {
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(93, 64, 55, 0.1);
  margin-bottom: 20px;
  border: none;
  background-color: #fff;
}

.card-green {
  background-color: #f8f4f0;
}

.required {
  color: #5D4037;
}

/* Dashboard Menu Styles */
.dashboard-menu {
  background-color: #fff;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 10px rgba(93, 64, 55, 0.05);
  border: 1px solid #e8d9c5;
}

.dashboard-menu .nav-link {
  font-weight: 500;
  color: #5D4037;
  padding: 12px 20px;
  margin-bottom: 8px;
  border-radius: 8px;
  transition: all 0.3s ease;
  font-family: 'Cormorant Garamond', serif;
}

.dashboard-menu .nav-link:hover {
  background-color: #f8f4f0;
  color: #8B6B61;
}

.dashboard-menu .nav-link.active {
  background-color: #5D4037;
  color: white;
}

.dashboard-menu .nav-link i {
  margin-right: 10px;
  color: #8B6B61;
}

/* Card Styles */
.card-header {
  background-color: #5D4037;
  color: white;
  border-radius: 10px 10px 0 0;
  padding: 15px 20px;
  font-family: 'Cormorant Garamond', serif;
  font-weight: 600;
}

/* Button Styles */
.btn-success {
  background-color: #5D4037;
  border-color: #5D4037;
  color: white;
  font-family: 'Cormorant Garamond', serif;
  font-weight: 500;
  padding: 8px 20px;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.btn-success:hover {
  background-color: #8B6B61;
  border-color: #8B6B61;
  transform: translateY(-2px);
}

.btn-danger {
  background-color: #8B6B61;
  border-color: #8B6B61;
  color: white;
}

.btn-danger:hover {
  background-color: #A1887F;
  border-color: #A1887F;
}

/* Breadcrumb Styles */
.page-header.breadcrumb-wrap {
  background-color: #f8f4f0;
  padding: 15px 0;
  border-bottom: 1px solid #e8d9c5;
}

.breadcrumb {
  display: flex;
  align-items: center;
  font-family: 'Cormorant Garamond', serif;
  font-size: 16px;
  color: #5D4037;
}

.breadcrumb a {
  color: #8B6B61;
  text-decoration: none;
  transition: all 0.3s ease;
}

.breadcrumb a:hover {
  color: #5D4037;
  text-decoration: underline;
}

.breadcrumb span {
  margin: 0 8px;
  color: #8B6B61;
}

/* Table Styles */
.table {
  font-family: 'Cormorant Garamond', serif;
}

.table thead th {
  background-color: #5D4037;
  color: white;
  font-weight: 600;
  border-bottom: 2px solid #8B6B61;
}

.table tbody td {
  color: #5D4037;
  vertical-align: middle;
}

/* Media Queries */
@media (max-width: 768px) {
  .dashboard-menu {
    padding: 15px;
    margin-bottom: 20px;
  }

  .card {
    margin-bottom: 15px;
  }

  .breadcrumb {
    font-size: 14px;
  }
}

/* Pagination Styles */
.pagination {
  margin-top: 20px;
}

.page-link {
  color: #5D4037;
  border: 1px solid #e8d9c5;
  margin: 0 5px;
  border-radius: 5px;
  padding: 8px 15px;
  font-family: 'Cormorant Garamond', serif;
  font-size: 14px;
  transition: all 0.3s ease;
}

.page-link:hover {
  color: #fff;
  background-color: #5D4037;
  border-color: #5D4037;
}

.page-item.active .page-link {
  background-color: #5D4037;
  border-color: #5D4037;
  color: #fff;
}

.page-item.disabled .page-link {
  color: #e8d9c5;
  background-color: #fff;
  border-color: #e8d9c5;
}

.page-item:first-child .page-link,
.page-item:last-child .page-link {
  border-radius: 5px;
}

/* Alert Styles */
.alert-info {
  background-color: #f8f4f0;
  border-color: #e8d9c5;
  color: #5D4037;
}

/* Product List Styles */
.product-list {
  max-height: 200px;
  overflow-y: auto;
}

.product-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  padding: 8px;
  border: 1px solid #e8d9c5;
  border-radius: 8px;
  background-color: #fff;
}

.product-image {
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 4px;
  margin-right: 10px;
}

.product-info {
  flex-grow: 1;
}

.product-name {
  font-weight: 500;
  margin-bottom: 4px;
  color: #5D4037;
}

.product-quantity {
  font-size: 12px;
  color: #8B6B61;
}

.product-price {
  font-weight: 600;
  color: #5D4037;
}

/* Button Group Styles */
.btn-group {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.btn-group .btn {
  padding: 4px 8px;
  font-size: 12px;
}

/* Profile Picture Styles */
.profile-picture-container {
  width: 150px;
  height: 150px;
  margin: 0 auto 20px;
  position: relative;
}

.profile-picture {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid #5D4037;
  box-shadow: 0 4px 10px rgba(93, 64, 55, 0.2);
}

.profile-picture-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #e8d9c5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48px;
  color: #5D4037;
  border: 3px solid #5D4037;
  box-shadow: 0 4px 10px rgba(93, 64, 55, 0.2);
}

/* Custom style for wider orders table */
#orders .card-body {
  padding: 50px !important; /* Reduce padding */
}

/* Style for the orders table */
#orders .table {
  width: 150%; /* Make the table fill the width of its container */
}

