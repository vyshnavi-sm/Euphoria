<%- include("../../views/partials/user/header") %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>

html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden; 
}
:root {
  --primary-color: #5D4037;
  --secondary-color: #8B6B61;
  --accent-color: #A1887F;
  --light-bg: #f8f4f0;
  --border-color: #e8d9c5;
  --text-primary: #5D4037;
  --text-secondary: #8B6B61;
  --white: #ffffff;
  --danger-color: #d32f2f;
  --shadow-light: 0 4px 10px rgba(93, 64, 55, 0.05);
  --shadow-medium: 0 4px 10px rgba(93, 64, 55, 0.1);
  --shadow-dark: 0 4px 20px rgba(93, 64, 55, 0.15);
  --border-radius: 8px;
  --border-radius-lg: 10px;
  --font-primary: 'Cormorant Garamond', serif;
  --font-secondary: 'Playfair Display', serif;
  --transition: all 0.3s ease;
}


.main {
  padding: 30px 0;
  background-color: var(--light-bg);
}

.content-main {
  padding: 30px;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.container-fluid.px-0 {
  padding-left: 0 !important;
  padding-right: 0 !important;
  max-width: 100vw;
}

/* Column Layout */
.col-md-10 {
  max-width: 90vw !important;
  flex: 0 0 90vw !important;
}

.col-md-2 {
  max-width: 10vw !important;
  flex: 0 0 10vw !important;
}


.card {
  border: none;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-medium);
  margin-bottom: 20px;
  background-color: var(--white);
  width: 100%;
  margin-left: 0;
  margin-right: 0;
}

.card-green {
  background-color: var(--light-bg);
}

.card-header {
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
  padding: 15px 20px;
  font-family: var(--font-primary);
  font-weight: 600;
  font-size: 20px;
  border-bottom: none;
}

.card-body {
  padding: 30px;
}

.card-title {
  color: var(--primary-color);
  font-family: var(--font-secondary);
  font-weight: 700;
  font-size: 28px;
  margin-bottom: 10px;
}

.card-text {
  color: #343a40;
  font-family: var(--font-primary);
  font-size: 18px;
  line-height: 1.6;
  margin-bottom: 5px;
}

.card-text strong {
  color: var(--primary-color);
}


.dashboard-menu {
  background-color: var(--white);
  border-radius: var(--border-radius-lg);
  padding: 20px;
  box-shadow: var(--shadow-light);
  border: 1px solid var(--border-color);
  min-width: 140px;
  max-width: 160px;
  width: 100%;
  word-break: break-word;
}

.dashboard-menu .nav-link {
  font-weight: 500;
  color: var(--text-primary);
  padding: 12px 20px;
  margin-bottom: 8px;
  border-radius: var(--border-radius);
  transition: var(--transition);
  font-family: var(--font-primary);
}

.dashboard-menu .nav-link:hover {
  background-color: var(--light-bg);
  color: var(--text-secondary);
}

.dashboard-menu .nav-link.active {
  background-color: var(--primary-color);
  color: var(--white);
}

.dashboard-menu .nav-link i {
  margin-right: 10px;
  color: var(--text-secondary);
}


.page-header.breadcrumb-wrap {
  background-color: var(--light-bg);
  padding: 15px 0;
  border-bottom: 1px solid var(--border-color);
}

.breadcrumb {
  display: flex;
  align-items: center;
  font-family: var(--font-primary);
  font-size: 16px;
  color: var(--text-primary);
}

.breadcrumb a {
  color: var(--text-secondary);
  text-decoration: none;
  transition: var(--transition);
}

.breadcrumb a:hover {
  color: var(--text-primary);
  text-decoration: underline;
}

.breadcrumb span {
  margin: 0 8px;
  color: var(--text-secondary);
}


.profile-picture-container {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 20px;
  border: 3px solid #a97155;
  box-shadow: 0 0 0 5px rgba(169, 113, 85, 0.2);
  position: relative;
}

.profile-picture {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  border: 3px solid var(--primary-color);
  box-shadow: var(--shadow-medium);
}

.profile-picture-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48px;
  color: var(--text-primary);
  border: 3px solid var(--primary-color);
  box-shadow: var(--shadow-medium);
}


.form-label {
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 8px;
}

.form-control {
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  padding: 10px 15px;
  font-family: var(--font-primary);
  color: var(--text-primary);
}

.form-control:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 0.2rem rgba(93, 64, 55, 0.15);
}

.required {
  color: var(--text-primary);
}

.error-message {
  color: var(--danger-color);
  font-size: 0.875rem;
  margin-top: 4px;
}


.btn-primary {
  background-color: #a97155;
  border-color: #a97155;
  color: var(--white);
  font-family: var(--font-primary);
  font-weight: 600;
  padding: 12px 25px;
  border-radius: var(--border-radius);
  transition: var(--transition);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
}

.btn-primary:hover {
  background-color: #8b5e3c;
  border-color: #8b5e3c;
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(169, 113, 85, 0.2);
}

.btn-primary i {
  font-size: 18px;
}

.btn-success {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  color: var(--white);
  font-family: var(--font-primary);
  font-weight: 500;
  padding: 8px 20px;
  border-radius: var(--border-radius);
  transition: var(--transition);
}

.btn-success:hover {
  background-color: var(--secondary-color);
  border-color: var(--secondary-color);
  transform: translateY(-2px);
}

.btn-danger {
  background-color: var(--secondary-color);
  border-color: var(--secondary-color);
  color: var(--white);
}

.btn-danger:hover {
  background-color: var(--accent-color);
  border-color: var(--accent-color);
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.btn-group .btn {
  padding: 4px 8px;
  font-size: 12px;
}


.table {
  font-family: var(--font-primary);
  width: 100%;
}

.table thead th {
  background-color: var(--primary-color);
  color: var(--white);
  font-weight: 600;
  border-bottom: 2px solid var(--secondary-color);
}

.table tbody td {
  color: var(--text-primary);
  vertical-align: middle;
}

.table-responsive {
  overflow-x: auto;
}

/* Custom Orders Table */
#orders .card-body {
  padding: 50px !important;
}

#orders .table {
  width: 150%;
}


.pagination {
  margin-top: 20px;
}

.page-link {
  color: var(--text-primary);
  border: 1px solid var(--border-color);
  margin: 0 5px;
  border-radius: 5px;
  padding: 8px 15px;
  font-family: var(--font-primary);
  font-size: 14px;
  transition: var(--transition);
}

.page-link:hover {
  color: var(--white);
  background-color: var(--primary-color);
  border-color: var(--primary-color);
}

.page-item.active .page-link {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  color: var(--white);
}

.page-item.disabled .page-link {
  color: var(--border-color);
  background-color: var(--white);
  border-color: var(--border-color);
}

.page-item:first-child .page-link,
.page-item:last-child .page-link {
  border-radius: 5px;
}


.modal-content {
  border-radius: var(--border-radius-lg);
  border: none;
  box-shadow: var(--shadow-dark);
  width: 1000px;
}

.modal-header {
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
  padding: 15px 20px;
  border: none;
}

.modal-header .btn-close {
  color: var(--white);
  filter: brightness(0) invert(1);
}

.modal-body {
  padding: 20px;
  background-color: var(--white);
}

.modal-footer {
  border-top: 1px solid var(--border-color);
  padding: 15px 20px;
  background-color: var(--light-bg);
  border-radius: 0 0 var(--border-radius-lg) var(--border-radius-lg);
}


.product-list {
  max-height: 200px;
  overflow-y: auto;
}

.product-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  padding: 8px;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  background-color: var(--white);
}

.product-image {
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 4px;
  margin-right: 10px;
}

.product-info {
  flex-grow: 1;
}

.product-name {
  font-weight: 500;
  margin-bottom: 4px;
  color: var(--text-primary);
}

.product-quantity {
  font-size: 12px;
  color: var(--text-secondary);
}

.product-price {
  font-weight: 600;
  color: var(--text-primary);
}


.alert-info {
  background-color: var(--light-bg);
  border-color: var(--border-color);
  color: var(--text-primary);
}

.badge-cancelled {
  background-color: #b0b0b0 !important;
  color: var(--white) !important;
  text-decoration: line-through;
  font-weight: bold;
}

.tab-pane .card {
  margin-bottom: 20px;
}

.input-group {
  display: flex;
  gap: 8px;
}

.input-group .form-control,
.input-group .btn {
  border-radius: var(--border-radius) !important;
}

.orders-card {
  border-radius: 14px;
  background: linear-gradient(90deg, #f8f4f0 60%, #f3e7db 100%);
  box-shadow: 0 2px 12px rgba(93,64,55,0.08), 0 1.5px 6px rgba(93,64,55,0.04);
  transition: box-shadow 0.2s, transform 0.2s;
  margin-bottom: 14px;
  border: 1px solid #e8d9c5;
}
.orders-card:hover {
  box-shadow: 0 6px 24px rgba(93,64,55,0.13), 0 2px 8px rgba(93,64,55,0.08);
  transform: translateY(-2px) scale(1.01);
}
.orders-card .card-body {
  padding: 1.1em 1.3em;
}
.orders-card .badge {
  box-shadow: 0 1px 4px rgba(93,64,55,0.08);
  letter-spacing: 0.5px;
}
.orders-card .btn {
  border-radius: 7px;
  font-weight: 600;
  box-shadow: 0 1px 4px rgba(93,64,55,0.08);
  transition: background 0.2s, color 0.2s, box-shadow 0.2s;
}
.orders-card .btn:hover {
  background: #7a5237 !important;
  color: #fff !important;
  box-shadow: 0 2px 8px rgba(93,64,55,0.13);
}

/* --- Elegant Nav Tabs --- */
.nav-tabs {
  border-bottom: 2.5px solid #e8d9c5 !important;
  background: linear-gradient(90deg, #f8f4f0 60%, #f3e7db 100%);
  border-radius: 12px 12px 0 0;
  box-shadow: 0 2px 8px rgba(93,64,55,0.04);
  padding: 0.5em 0.5em 0 0.5em;
}
.nav-tabs .nav-link {
  color: #5D4037;
  font-family: 'Playfair Display', serif;
  font-size: 1.08rem;
  font-weight: 600;
  border: none;
  border-bottom: 3px solid transparent;
  margin: 0 0.5em;
  background: none;
  transition: color 0.2s, border-bottom 0.2s, background 0.2s;
  border-radius: 0;
  padding: 0.7em 1.2em 0.7em 1.2em;
}
.nav-tabs .nav-link.active {
  color: #a97155;
  border-bottom: 3px solid #a97155;
  background: #f8f4f0;
  box-shadow: 0 2px 8px rgba(93,64,55,0.04);
}
.nav-tabs .nav-link:hover {
  color: #8B6B61;
  background: #f3e7db;
}

.pagination {
  background: #f8f4f0;
  border-radius: 8px;
  box-shadow: 0 1px 4px rgba(93,64,55,0.06);
  padding: 0.3em 0.7em;
}
.page-link {
  font-weight: 600;
  border-radius: 6px !important;
}

.card:not(.orders-card):hover {
  box-shadow: 0 4px 16px rgba(93,64,55,0.13), 0 2px 8px rgba(93,64,55,0.08);
  transform: translateY(-2px) scale(1.01);
  transition: box-shadow 0.2s, transform 0.2s;
}


@media (max-width: 992px) {
  .dashboard-menu {
    min-width: 100%;
    max-width: 100%;
    width: 100%;
    margin-bottom: 16px;
    padding: 12px 8px;
    border-radius: 10px;
  }
  .col-md-2, .col-md-10 {
    max-width: 100% !important;
    flex: 0 0 100% !important;
  }
  .tab-content.dashboard-content {
    padding: 0 4px;
  }
  .card {
    margin-left: 0;
    margin-right: 0;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(93,64,55,0.08);
  }
  .card-body {
    padding: 12px 8px;
  }
  .card-title, .card-header h5, .card-header h2 {
    font-size: 1.2rem !important;
  }
  .btn, .btn-sm, .btn-primary, .btn-success, .btn-danger {
    font-size: 0.98rem !important;
    padding: 0.4em 0.8em !important;
  }
  .input-group {
    flex-direction: column;
    gap: 6px;
  }
  .input-group .form-control, .input-group .btn {
    width: 100%;
    font-size: 1rem;
  }
  .table-responsive {
    overflow-x: auto;
  }
  .table {
    font-size: 0.95rem;
    min-width: 500px;
  }
}

@media (max-width: 576px) {
  .main {
    padding: 5px 0;
  }
  .dashboard-menu {
    padding: 6px 2px;
    font-size: 0.98rem;
  }
  .card-header, .card-title, .card-header h5, .card-header h2 {
    font-size: 1rem !important;
    padding: 8px 6px;
  }
  .card-body {
    padding: 6px 2px;
  }
  .btn, .btn-sm, .btn-primary, .btn-success, .btn-danger {
    font-size: 0.95rem !important;
    padding: 0.3em 0.6em !important;
  }
  .input-group {
    gap: 4px;
  }
  .table {
    font-size: 0.85rem;
    min-width: 350px;
  }
}

@media (max-width: 768px) {
  .btn-primary {
    width: 100%;
    margin-bottom: 10px;
  }
  
  .d-flex.justify-content-center.gap-3.mt-4 {
    flex-direction: column;
    align-items: center;
  }
}

@media (max-width: 992px) {
  .orders-card .card-body,
  .card .card-body {
    padding: 0.7em 0.6em !important;
  }
  .orders-card {
    margin-bottom: 10px;
  }
  .nav-tabs {
    font-size: 0.97rem;
    padding: 0.2em 0.2em 0 0.2em;
    overflow-x: auto;
    white-space: nowrap;
    border-radius: 10px 10px 0 0;
  }
  .nav-tabs .nav-link {
    padding: 0.5em 0.7em;
    font-size: 0.97rem;
    min-width: 90px;
  }
  .input-group {
    flex-direction: column;
    gap: 6px;
  }
  .input-group .form-control, .input-group .btn {
    width: 100%;
    font-size: 1rem;
  }
  .pagination {
    padding: 0.2em 0.3em;
    font-size: 0.97rem;
  }
}
@media (max-width: 768px) {
  .orders-card .card-body,
  .card .card-body {
    padding: 0.5em 0.3em !important;
  }
  .orders-card {
    margin-bottom: 7px;
  }
  .nav-tabs {
    font-size: 0.95rem;
    padding: 0.1em 0.1em 0 0.1em;
    overflow-x: auto;
    white-space: nowrap;
    border-radius: 8px 8px 0 0;
    position: sticky;
    top: 0;
    z-index: 10;
    background: #f8f4f0;
  }
  .nav-tabs .nav-link {
    padding: 0.4em 0.5em;
    font-size: 0.95rem;
    min-width: 80px;
  }
  .input-group {
    gap: 4px;
  }
  .table-responsive {
    overflow-x: auto;
  }
  .table {
    font-size: 0.85rem;
    min-width: 350px;
  }
  .d-flex.flex-md-row {
    flex-direction: column !important;
    align-items: flex-start !important;
    gap: 0.5em !important;
  }
  .orders-card .d-flex.flex-md-row {
    flex-direction: column !important;
    align-items: flex-start !important;
    gap: 0.5em !important;
  }
  .orders-card .d-flex.flex-md-row > * {
    width: 100%;
    min-width: 0;
  }
}
@media (max-width: 576px) {
  .main {
    padding: 5px 0;
  }
  .orders-card .card-body,
  .card .card-body {
    padding: 0.3em 0.1em !important;
  }
  .orders-card {
    margin-bottom: 5px;
  }
  .nav-tabs {
    font-size: 0.92rem;
    padding: 0.05em 0.05em 0 0.05em;
    border-radius: 6px 6px 0 0;
  }
  .nav-tabs .nav-link {
    padding: 0.3em 0.3em;
    font-size: 0.92rem;
    min-width: 70px;
  }
  .pagination {
    font-size: 0.92rem;
    padding: 0.1em 0.1em;
  }
}
.profile-box-container {
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 6px 32px rgba(93,64,55,0.10), 0 1.5px 6px rgba(93,64,55,0.04);
  border: 1.5px solid #e8d9c5;
  padding: 48px 32px;
  max-width: 1300px;
  margin: 40px auto 40px auto;
}
@media (max-width: 992px) {
  .profile-box-container {
    padding: 18px 6px;
    margin: 12px 0;
    border-radius: 10px;
  }
}

.page-link {
  margin: 0 5px;
  text-decoration: none;
  color: #333;
}

.page-link:hover {
  text-decoration: underline;
}

.active-page {
  font-weight: bold;
  text-decoration: underline;
  color: #007bff;
}

</style>

<main class="main">
  <div class="profile-box-container">
    <div class="page-header breadcrumb-wrap mb-3">
      <div class="container">
        <div class="breadcrumb">
          <a href="/" rel="nofollow">Home</a>
          <span></span> Profile <span></span> Account
        </div>
      </div>
    </div>
    <section class="pt-10 pb-10">
      <div class="container-fluid px-0">
        <div class="row">
          <div class="col-12">
            <ul class="nav nav-tabs justify-content-center mb-4 flex-nowrap overflow-auto" role="tablist" style="border-bottom: 2px solid #e8d9c5; white-space: nowrap;">
              <li class="nav-item">
                <a class="nav-link active" id="dashboard-tab" data-bs-toggle="tab" href="#dashboard" role="tab" aria-controls="Profile" aria-selected="true">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="false">My Address</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab" aria-controls="orders" aria-selected="false">Orders</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="track-orders-tab" data-bs-toggle="tab" href="#track-orders" role="tab" aria-controls="track-orders" aria-selected="false">Wallet Status</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="wallet-history-tab" data-bs-toggle="tab" href="#wallet-history" role="tab" aria-controls="wallet-history" aria-selected="false">Wallet History</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="referal-tab" data-bs-toggle="tab" href="#referal" role="tab" aria-controls="referal" aria-selected="false">Referrals</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
            <div class="tab-content dashboard-content">
              <div class="tab-pane fade show active" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                <!-- Banner/Header for Dashboard -->
                <div class="card mb-4" style="background: #5D4037; color: #fff; border-radius: 16px; box-shadow: 0 4px 16px rgba(93,64,55,0.08);">
                  <div class="card-body d-flex flex-column flex-md-row align-items-center justify-content-between" style="padding: 2.5rem 2rem;">
                    <div>
                      <div style="font-size: 1.1rem; letter-spacing: 2px; opacity: 0.8;">ACCOUNT OVERVIEW</div>
                      <h2 style="font-family: 'Playfair Display', serif; font-weight: 700; font-size: 2.5rem; margin: 0;">User Profile</h2>
                      <div style="font-size: 1rem; opacity: 0.7; margin-top: 0.5rem;">
                        Welcome, <%= user.name %>!
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card">
                  <div class="card-body text-center">
                    <div class="profile-picture-container">
                      <% if (user.profilePicture) { %>
                        <img src="<%= user.profilePicture %>" alt="Profile Picture" class="profile-picture">
                      <% } else { %>
                        <div class="profile-picture-placeholder">
                          <i class="fi-rs-user"></i>
                        </div>
                      <% } %>
