<%- include("../../views/partials/user/header") %>
<style>
    /* Add these font imports at the top of your style section */
    @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

    .jewelry-heading {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        font-size: 2.5rem;
        color: #ffffff;
        letter-spacing: 1px;
        margin-bottom: 1rem;
        text-transform: uppercase;
    }

    .jewelry-title {
        font-family: 'Cormorant Garamond', serif;
        font-weight: 600;
        font-size: 4rem;
        color: #ffffff;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        letter-spacing: 2px;
    }

    .jewelry-description {
        font-family: 'Cormorant Garamond', serif;
        font-weight: 400;
        font-size: 1.5rem;
        color: #ffffff;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Add responsive styles */
    @media (max-width: 768px) {
        .jewelry-heading {
            font-size: 2rem;
        }
        
        .jewelry-title {
            font-size: 3rem;
        }
        
        .jewelry-description {
            font-size: 1.2rem;
        }
    }

    @media (max-width: 480px) {
        .jewelry-heading {
            font-size: 1.5rem;
        }
        
        .jewelry-title {
            font-size: 2.5rem;
        }
        
        .jewelry-description {
            font-size: 1.1rem;
        }
    }

    .btn{
        color: #fff;
        background: #8B6B61;
        border: none;
        border-radius: 8px;
        padding: 12px 28px;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 1px;
        box-shadow: 0 2px 8px rgba(80, 60, 30, 0.08);
        transition: background 0.2s, color 0.2s, transform 0.2s;
    }
    .btn:hover, .btn:focus {
        background: #5D4037;
        color: #fff;
        transform: translateY(-2px) scale(1.04);
    }

    .categories {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
        margin-bottom: 3rem;
    }
    .category-item {
        position: relative;
        width: 200px;
        height: 220px;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 4px 18px rgba(80, 60, 30, 0.10), 0 1.5px 6px rgba(80, 60, 30, 0.08);
        background: #fff;
        transition: transform 0.35s cubic-bezier(.4,2,.3,1), box-shadow 0.35s;
        cursor: pointer;
        margin-bottom: 1.5rem;
    }
    .category-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 18px;
        transition: transform 0.35s cubic-bezier(.4,2,.3,1);
        display: block;
    }
    .category-item:hover {
        transform: scale(1.06) translateY(-6px);
        box-shadow: 0 8px 32px rgba(80, 60, 30, 0.18), 0 3px 12px rgba(80, 60, 30, 0.12);
        z-index: 2;
    }
    .category-item:hover img {
        transform: scale(1.08);
    }
    .category-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(0deg, rgba(60,40,20,0.65) 60%, rgba(0,0,0,0.05) 100%);
        display: flex;
        align-items: flex-end;
        justify-content: center;
        pointer-events: none;
        transition: background 0.3s;
    }
    .category-item:hover .category-overlay {
        background: linear-gradient(0deg, rgba(173,93,8,0.75) 60%, rgba(0,0,0,0.05) 100%);
    }
    .category-text {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 18px 0 14px 0;
        text-align: center;
        font-family: 'Playfair Display', serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        letter-spacing: 2px;
        z-index: 2;
        text-shadow: 0 2px 8px rgba(0,0,0,0.18);
        pointer-events: none;
    }
    @media (max-width: 900px) {
        .categories { gap: 1.2rem; }
        .category-item { width: 150px; height: 160px; }
    }
    @media (max-width: 600px) {
        .categories { gap: 0.7rem; }
        .category-item { width: 110px; height: 120px; }
        .category-text { font-size: 1rem; padding: 10px 0 7px 0; }
    }
</style>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <!-- <div class="hero-image">
                <img src="./photos/Home page.jpg" alt="Jewelry Display">
            </div> -->
            <h2 class="jewelry-heading">JEWELRY</h2>
            <h1 class="jewelry-title">DISCOVER SPARKLE<br>WITH STYLE</h1>
            <p class="jewelry-description">Whether casual or formal, find the perfect jewelry for every occasion with us.</p>
            <br><br>
            <a href="/shop" class="btn">SHOP NOW</a>
        </div>
    </section>
<br><br>
    <!-- Category Section -->
    <section class="categories">
        <% categories.forEach(category => { %>
            <div class="category-item">
                <img src="<%= categoryImages[category._id] ? (categoryImages[category._id]) : ('/category-images/' + (category.image || 'default-image.jpg')) %>" alt="<%= category.name %>">
                <div class="category-overlay"></div>
                <div class="category-text"><%= category.name.toUpperCase() %></div>
            </div>
        <% }); %>
    </section>
    
    <!-- Best Seller Section -->
    <section class="best-seller">
        <h3>BEST SELLER</h3>
        <br><br>
        <div class="products">
            <% const limitedProducts = products.slice(0, 5); %>
            <% limitedProducts.forEach(product => { %>
                <div class="product">
                    <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>">
                    <p><%= product.productName %></p>
                    <p>â‚¹<%= product.salePrice %></p>
                </div>
            <% }); %>
        </div>
        <br><br>
        <a href="/shop" class="btn">SEE MORE</a>
    </section>

    <!-- Offers Section -->
    <section class="offers">
        <h2>GREAT OFFERS</h2>
        <p>EXPLORE THE DEALS AND DISCOUNTS</p>
        <br><br>  
        <a href="/shop" class="btn">EXPLORE</a>
        <!-- <div class="bottom-image">
            <img src="./photos/lastoneonhomepage.jpg" alt="Jewelry Display">
        </div> -->
    </section>

    <%- include("../../views/partials/user/footer") %>

<% if (typeof blockedUser !== 'undefined' && blockedUser) { %>
<script>
    Swal.fire({
        icon: 'error',
        title: 'Blocked',
        text: 'You have been blocked by the admin.',
        confirmButtonText: 'OK',
        allowOutsideClick: false,
        allowEscapeKey: false
    }).then(() => {
        window.location.href = '/login';
    });
</script>
<% } %>







