<%- include("../../views/partials/user/header") %>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <!-- <div class="hero-image">
                <img src="./photos/Home page.jpg" alt="Jewelry Display">
            </div> -->
            <h2>JEWELRY</h2>
            <h1>DISCOVER SPARKLE<br>WITH STYLE</h1>
            <p>Whether casual or formal, find the perfect jewelry for every occasion with us.</p>
            <br><br>
            <a href="/shop" class="btn">SHOP NOW</a>
        </div>
    </section>
<br><br>
    <!-- Category Section -->
    <section class="categories">
        <% categories.forEach(category => { %>
            <div class="category-item">
                <img src="<%= category.image %>" alt="<%= category.name %>">
                <div class="category-text"><%= category.name.toUpperCase() %></div>
            </div>
        <% }); %>
    </section>

    <!-- Best Seller Section -->
    <section class="best-seller">
        <h3>BEST SELLER</h3>
        <br><br>
        <div class="products">
            <% const limitedProducts = products.slice(0, 5); %>
            <% limitedProducts.forEach(product => { %>
                <div class="product">
                    <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>">
                    <p><%= product.productName %></p>
                    <p>â‚¹<%= product.salePrice %></p>
                </div>
            <% }); %>
        </div>
        <br><br>
        <a href="/products" class="btn">SEE MORE</a>
    </section>

    <!-- Offers Section -->
    <section class="offers">
        <h2>GREAT OFFERS</h2>
        <p>EXPLORE THE DEALS AND DISCOUNTS</p>
        <br><br>  
        <a href="/offers" class="btn">EXPLORE</a>
        <!-- <div class="bottom-image">
            <img src="./photos/lastoneonhomepage.jpg" alt="Jewelry Display">
        </div> -->
    </section>

