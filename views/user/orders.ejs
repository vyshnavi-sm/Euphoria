<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders - Euphoria</title>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      --primary-color: #5D4037;
      --primary-light: #8B6B61;
      --primary-dark: #321911;
      --accent-color: #D7CCC8;
      --accent-dark: #A1887F;
      --text-light: #F5F5F5;
      --text-dark: #3E2723;
      --background-light: #EFEBE9;
      --gold: #D4AF37;
    }
    
    body {
      background-color: var(--background-light);
      font-family: 'Cormorant Garamond', serif;
      color: var(--text-dark);
      line-height: 1.6;
    }
    
    .orders-container {
      max-width: 1200px;
      margin: 80px auto 50px;
      padding: 0 20px;
    }
    
    .orders-header {
      background-color: var(--primary-color);
      color: var(--text-light);
      padding: 20px 30px;
      text-align: center;
      border-bottom: 3px solid var(--gold);
      border-radius: 15px 15px 0 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .header-content {
      flex-grow: 1;
      text-align: center;
    }
    
    .section-title {
      font-size: 32px;
      color: var(--text-light);
      margin-bottom: 0;
      font-family: 'Playfair Display', serif;
      letter-spacing: 1px;
    }
    
    .section-subtitle {
      font-size: 14px;
      color: var(--accent-color);
      font-family: 'Montserrat', sans-serif;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .search-container {
      display: flex;
      margin: 20px 0;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 10px rgba(50, 25, 17, 0.1);
      overflow: hidden;
    }

    .search-input {
      flex-grow: 1;
      padding: 12px 15px;
      border: none;
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
      color: var(--text-dark);
    }

    .search-input:focus {
      outline: none;
      box-shadow: 0 0 0 2px var(--primary-light);
    }

    .search-btn {
      background-color: var(--primary-color);
      color: var(--text-light);
      border: none;
      padding: 0 20px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .search-btn:hover {
      background-color: var(--primary-dark);
    }

    .order-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(50, 25, 17, 0.1);
      margin-bottom: 20px;
      overflow: hidden;
    }

    .order-header {
      background-color: var(--primary-light);
      color: var(--text-light);
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .order-header-left {
      display: flex;
      flex-direction: column;
    }

    .order-id {
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
      font-weight: 500;
    }

    .order-date {
      font-size: 14px;
      color: var(--accent-color);
    }

    .order-status {
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 500;
      text-transform: uppercase;
      font-family: 'Montserrat', sans-serif;
    }

    .status-pending {
      background-color: #FFF3E0;
      color: #E65100;
    }

    .status-processing {
      background-color: #E3F2FD;
      color: #1565C0;
    }

    .status-shipped {
      background-color: #E8F5E9;
      color: #2E7D32;
    }

    .status-delivered {
      background-color: #E8F5E9;
      color: #2E7D32;
    }

    .status-cancelled {
      background-color: #FFEBEE;
      color: #C62828;
    }

    .status-returned {
      background-color: #F3E5F5;
      color: #6A1B9A;
    }

    .order-actions {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .btn-sm {
      padding: 4px 10px;
      font-size: 12px;
      border-radius: 6px;
      font-family: 'Montserrat', sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-detail {
      background-color: var(--primary-color);
      color: var(--text-light);
      border: none;
    }

    .btn-detail:hover {
      background-color: var(--primary-dark);
      color: var(--text-light);
    }

    .btn-cancel {
      background-color: #FFEBEE;
      color: #C62828;
      border: 1px solid #FFCDD2;
    }

    .btn-cancel:hover {
      background-color: #FFCDD2;
    }

    .btn-return {
      background-color: #F3E5F5;
      color: #6A1B9A;
      border: 1px solid #E1BEE7;
    }

    .btn-return:hover {
      background-color: #E1BEE7;
    }

    .btn-invoice {
      background-color: #E8F5E9;
      color: #2E7D32;
      border: 1px solid #C8E6C9;
    }

    .btn-invoice:hover {
      background-color: #C8E6C9;
    }

    .order-content {
      padding: 20px;
    }

    .product-item {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
      padding: 15px;
      border: 1px solid #e0d6d1;
      border-radius: 10px;
      background-color: #fff;
      position: relative;
    }

    .product-item img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 8px;
      margin-right: 20px;
      border: 1px solid #e0d6d1;
    }

    .product-info {
      flex-grow: 1;
    }
    
    .product-name {
      font-family: 'Playfair Display', serif;
      font-size: 18px;
      margin-bottom: 5px;
    }
    
    .product-price {
      font-weight: 600;
      color: var(--primary-color);
    }

    .product-actions {
      position: absolute;
      right: 15px;
      top: 15px;
    }

    .order-summary {
      background-color: var(--background-light);
      padding: 20px;
      border-radius: 10px;
      margin-top: 20px;
    }

    .summary-line {
      display: flex;
      justify-content: space-between;
      margin-bottom: 12px;
      font-size: 16px;
    }
    
    .summary-total {
      font-family: 'Playfair Display', serif;
      font-size: 20px;
      font-weight: 600;
      color: var(--primary-color);
      margin-top: 10px;
      padding-top: 10px;
      border-top: 1px dashed #e0d6d1;
    }

    .empty-orders {
      text-align: center;
      padding: 50px 20px;
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(50, 25, 17, 0.1);
    }

    .empty-orders-icon {
      font-size: 60px;
      color: var(--primary-light);
      margin-bottom: 20px;
    }

    .empty-orders-text {
      font-family: 'Playfair Display', serif;
      font-size: 24px;
      color: var(--primary-color);
      margin-bottom: 20px;
    }

    .btn-brown, .btn-brown:visited {
      background-color: var(--primary-color) !important;
      color: var(--text-light) !important;
      border: none !important;
    }
    .btn-brown:hover, .btn-brown:active, .btn-brown:focus {
      background-color: var(--primary-dark) !important;
      color: var(--text-light) !important;
      border: none !important;
      box-shadow: 0 5px 15px rgba(62, 39, 35, 0.2);
    }

    .pagination {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }

    .page-item.active .page-link {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      color: var(--text-light);
    }

    .page-link {
      color: var(--primary-color);
      border: 1px solid var(--primary-light);
      margin: 0 5px;
      border-radius: 5px;
      padding: 8px 15px;
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
      transition: all 0.3s ease;
    }

    .page-link:hover {
      color: var(--text-light);
      background-color: var(--primary-light);
      border-color: var(--primary-light);
    }

    .page-item.disabled .page-link {
      color: var(--accent-dark);
      background-color: var(--background-light);
      border-color: var(--accent-dark);
    }

    .page-item:first-child .page-link,
    .page-item:last-child .page-link {
      border-radius: 5px;
    }

    /* Modal styles */
    .modal-content {
      border-radius: 15px;
      border: none;
      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
      background-color: var(--primary-color);
      color: var(--text-light);
      border-radius: 15px 15px 0 0;
      border-bottom: 3px solid var(--gold);
    }

    .modal-title {
      font-family: 'Playfair Display', serif;
      font-size: 22px;
    }

    .modal-body {
      padding: 25px;
    }

    .modal-footer {
      border-top: 1px solid #e0d6d1;
      padding: 15px 25px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-label {
      font-family: 'Montserrat', sans-serif;
      font-size: 14px;
      font-weight: 500;
      margin-bottom: 8px;
      color: var(--primary-dark);
    }

    .form-control {
      border: 1px solid #e0d6d1;
      border-radius: 8px;
      padding: 10px 12px;
      font-family: 'Montserrat', sans-serif;
    }

    .form-control:focus {
      border-color: var(--primary-light);
      box-shadow: 0 0 0 0.2rem rgba(93, 64, 55, 0.25);
    }

    /* Responsive Design for Orders Page */
    @media (max-width: 992px) {
      .orders-container {
        margin: 40px auto 30px;
        padding: 0 10px;
      }
      .orders-header {
        flex-direction: column;
        padding: 15px 10px;
        text-align: center;
      }
      .orders-header .btn {
        margin-top: 15px;
        width: 100%;
      }
      .header-content {
        width: 100%;
        margin-bottom: 10px;
      }
      .search-container {
        flex-direction: column;
        gap: 0;
      }
      .search-input {
        width: 100%;
        border-radius: 10px 10px 0 0;
        margin-bottom: 0;
      }
      .search-btn {
        width: 100%;
        border-radius: 0 0 10px 10px;
        padding: 10px 0;
      }
    }
    @media (max-width: 768px) {
      .orders-container {
        margin: 20px auto 10px;
        padding: 0 5px;
      }
      .orders-header {
        flex-direction: column;
        padding: 10px 5px;
        border-radius: 10px 10px 0 0;
      }
      .section-title {
        font-size: 22px;
      }
      .section-subtitle {
        font-size: 12px;
      }
      .search-container {
        flex-direction: column;
        box-shadow: none;
        border-radius: 8px;
      }
      .search-input, .search-btn {
        font-size: 13px;
        padding: 10px;
      }
      .card {
        padding: 10px;
      }
      .card-title {
        font-size: 16px;
      }
      .order-header, .d-flex.justify-content-between.align-items-center.mb-3 {
        flex-direction: column;
        align-items: flex-start !important;
        gap: 8px;
      }
      .row {
        flex-direction: column;
      }
      .col-md-6, .text-md-end {
        width: 100% !important;
        text-align: left !important;
        margin-bottom: 10px;
      }
      .btn {
        width: 100%;
        margin-bottom: 8px;
      }
      .pagination {
        flex-direction: column;
        gap: 8px;
      }
      .page-link {
        padding: 8px 10px;
        font-size: 13px;
      }
      .empty-orders {
        padding: 30px 5px;
      }
      .empty-orders-text {
        font-size: 18px;
      }
      .modal-dialog {
        margin: 1rem auto;
        max-width: 95vw;
      }
    }
    @media (max-width: 576px) {
      .orders-header {
        padding: 8px 2px;
        border-radius: 8px 8px 0 0;
      }
      .section-title {
        font-size: 16px;
      }
      .section-subtitle {
        font-size: 10px;
      }
      .search-input, .search-btn {
        font-size: 12px;
        padding: 8px;
      }
      .card {
        padding: 6px;
      }
      .card-title {
        font-size: 13px;
      }
      .order-header, .d-flex.justify-content-between.align-items-center.mb-3 {
        gap: 4px;
      }
      .btn {
        font-size: 12px;
        padding: 6px 0;
      }
      .product-item {
        flex-direction: column;
        align-items: flex-start;
        padding: 8px;
      }
      .product-item img {
        width: 60px;
        height: 60px;
        margin-right: 0;
        margin-bottom: 8px;
      }
      .product-name {
        font-size: 14px;
      }
      .product-price {
        font-size: 13px;
      }
      .order-summary {
        padding: 10px;
      }
      .summary-line {
        font-size: 13px;
      }
      .summary-total {
        font-size: 15px;
      }
      .modal-content {
        padding: 5px;
      }
    }
  </style>
</head>
<body>
  <%- include("../../views/partials/user/header") %>

  <div class="orders-container">
    <div class="orders-header">
      <div class="header-content">
        <p class="section-subtitle">Your Purchase History</p>
        <h2 class="section-title">My Orders</h2>
        <div id="currentDateTime" class="mt-2" style="font-size: 0.9rem; color: var(--text-dark);"></div>
      </div>
      <a href="/shop" class="btn btn-brown mt-3 mb-3">
        <i class="fas fa-shopping-bag"></i> Continue Shopping
      </a>
    </div>

    <!-- Search Form -->
    <form action="/user/orders" method="GET" class="search-container">
      <input type="text" name="query" placeholder="Search by orderNumber" class="search-input" value="<%= searchQuery || '' %>">
      <button type="submit" class="search-btn">
        <i class="fas fa-search"></i>
      </button>
    </form>

    <% if (orders && orders.length > 0) { %>
      <% orders.forEach(order => { %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="card-title mb-0">Order <%= order.orderNumber %></h5>
              <span class="badge bg-<%= order.status === 'Delivered' ? 'success' : order.status === 'Cancelled' || order.status === 'Payment Failed' ? 'danger' : order.status === 'Returned' ? 'info' : 'warning' %>">
                <%= order.status %>
              </span>
            </div>
            <div class="row">
              <div class="col-md-6">
                <p class="mb-1"><strong>Order Date:</strong> <%= order.createdOn && !isNaN(new Date(order.createdOn)) ? new Date(order.createdOn).toLocaleString('en-IN', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit',
                  second: '2-digit',
                  hour12: true
                }) : 'Invalid Date' %></p>
                <p class="mb-1"><strong>Total Amount:</strong> ₹<%= order.finalAmount ? order.finalAmount.toFixed(2) : '0.00' %></p>
                <!-- <p class="mb-1">
                    <strong>Delivery Charge:</strong>
                    <% if (order.totalPrice >= 1000) { %>
                        <span style="text-decoration: line-through; color: #999;">₹50</span> FREE
                    <% } else { %>
                        ₹<%= order.deliveryCharge ? order.deliveryCharge.toFixed(2) : '50.00' %>
                    <% } %>
                </p> -->
              </div>
              <div class="col-md-6 text-md-end">
                <a href="/user/orders/<%= order.orderNumber %>" class="btn btn-sm btn-brown">View Details</a>
                <% if (['Processing', 'Pending'].includes(order.status)) { %>
                  <button type="button" class="btn btn-sm btn-danger" onclick="showCancelOrderModal('<%= order.orderNumber %>')">
                    <i class="fas fa-times"></i> Cancel Order
                  </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }) %>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <div class="pagination">
          <ul class="pagination">
            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="/user/orders?page=<%= currentPage - 1 %><%= searchQuery ? '&query=' + searchQuery : '' %>">
                  <i class="fas fa-chevron-left"></i> Previous
                </a>
              </li>
            <% } %>
            
            <% for(let i = 1; i <= totalPages; i++) { %>
              <% if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                  <a class="page-link" href="/user/orders?page=<%= i %><%= searchQuery ? '&query=' + searchQuery : '' %>"><%= i %></a>
                </li>
              <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                <li class="page-item disabled">
                  <span class="page-link">...</span>
                </li>
              <% } %>
            <% } %>
            
            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="/user/orders?page=<%= currentPage + 1 %><%= searchQuery ? '&query=' + searchQuery : '' %>">
                  Next <i class="fas fa-chevron-right"></i>
                </a>
              </li>
            <% } %>
          </ul>
        </div>
      <% } %>
    <% } else { %>
      <div class="empty-orders">
        <div class="empty-orders-icon">
          <i class="fas fa-shopping-bag"></i>
        </div>
        <h3 class="empty-orders-text">
          <% if (searchQuery) { %>
            No orders found matching your search
          <% } else { %>
            You haven't placed any orders yet
          <% } %>
        </h3>
        <% if (searchQuery) { %>
          <a href="/user/orders" class="btn btn-brown me-2">
            <i class="fas fa-arrow-left"></i> Back to All Orders
          </a>
        <% } %>
        <a href="/shop" class="btn btn-brown">
          <i class="fas fa-shopping-bag"></i> Start Shopping
        </a>
      </div>
    <% } %>
  </div>

  <!-- Cancel Order Modal -->
  <div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="cancelOrderModalLabel">Cancel Order</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="cancelOrderForm">
            <input type="hidden" id="cancelOrderId" name="orderNumber">
            <div class="mb-3">
              <label for="cancelReason" class="form-label">Reason for Cancellation <span class="text-danger">*</span></label>
              <textarea class="form-control" id="cancelReason" name="reason" rows="3" required></textarea>
              <div class="invalid-feedback">Please provide a reason for cancellation.</div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-danger" onclick="submitCancelOrder()">Cancel Order</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <script>
function showCancelOrderModal(orderNumber) {
  document.getElementById('cancelOrderId').value = orderNumber;
  new bootstrap.Modal(document.getElementById('cancelOrderModal')).show();
}

async function submitCancelOrder() {
  const orderNumber = document.getElementById('cancelOrderId').value;
  const reason = document.getElementById('cancelReason').value.trim();

  if (!reason) {
    showToast('Please provide a reason for cancellation', 'error');
    return;
  }

  try {
    const response = await fetch(`/user/orders/${orderNumber}/cancel`, {
      method: 'POST',
      headers: { 
        'Content-Type': 'application/json' 
      },
      body: JSON.stringify({ reason })
    });

    const data = await response.json();

    if (data.success) {
      showToast('Order cancelled successfully', 'success');
      setTimeout(() => window.location.reload(), 1500);
    } else {
      showToast(data.message || 'Error cancelling order', 'error');
    }
  } catch (error) {
    console.error('Error cancelling order:', error);
    showToast('Error cancelling order', 'error');
  }

  bootstrap.Modal.getInstance(document.getElementById('cancelOrderModal')).hide();
}


  function showToast(message, type = 'success') {
    const toast = document.createElement('div');
    toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
    toast.setAttribute('role', 'alert');
    toast.setAttribute('aria-live', 'assertive');
    toast.setAttribute('aria-atomic', 'true');
    
    toast.innerHTML = `
      <div class="d-flex">
        <div class="toast-body">
          ${message}
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    `;
    
    document.body.appendChild(toast);
    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();
    
    toast.addEventListener('hidden.bs.toast', () => {
      document.body.removeChild(toast);
    });
  }

  // Function to update current date and time
  function updateCurrentDateTime() {
    const now = new Date();
    const dateTimeString = now.toLocaleString('en-IN', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: true
    });
    document.getElementById('currentDateTime').textContent = dateTimeString;
  }

  // Update date and time every second
  setInterval(updateCurrentDateTime, 1000);
  updateCurrentDateTime(); // Initial call

  // Modify the order date display to include time
  document.addEventListener('DOMContentLoaded', () => {
    // Update all order dates to include time
    const orderDates = document.querySelectorAll('.order-date');
    orderDates.forEach(dateElement => {
        const dateText = dateElement.textContent;
        if (dateText && dateText !== 'N/A') {
            const date = new Date(dateText);
            dateElement.textContent = date.toLocaleString('en-IN', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true
