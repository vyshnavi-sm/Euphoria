<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* General Styling */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #f4f1ec 0%, #e8e3db 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
            overflow-x: hidden;
        }

        /* Form Container */
        .content-main {
            width: 100%;
            max-width: 450px;
            margin: 0 auto;
        }

        .card-login {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0px 10px 30px rgba(139, 94, 60, 0.15);
            padding: 40px;
            transition: all 0.4s ease;
            border: 1px solid rgba(139, 94, 60, 0.1);
        }

        .card-login:hover {
            box-shadow: 0px 15px 40px rgba(139, 94, 60, 0.25);
            transform: translateY(-5px);
        }

        /* Title */
        .card-title {
            font-weight: 700;
            font-size: 28px;
            color: #5a3d2b;
            text-align: center;
            margin-bottom: 35px;
            position: relative;
            padding-bottom: 20px;
        }

        .card-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 4px;
            background: linear-gradient(135deg, #8b5e3c, #a0724d);
            border-radius: 4px;
        }

        /* Input Fields */
        .form-control {
            border-radius: 12px;
            padding: 18px 24px;
            font-size: 16px;
            height: 60px;
            border: 2px solid #e5e5e5;
            transition: all 0.3s ease;
            background-color: #fafafa;
            width: 100%;
            font-family: 'Poppins', sans-serif;
        }

        .form-control:focus {
            border-color: #8b5e3c;
            box-shadow: 0 0 0 0.3rem rgba(139, 94, 60, 0.15);
            background-color: #fff;
            outline: none;
        }

        .form-control:hover {
            border-color: #a0724d;
        }

        .mb-3 {
            margin-bottom: 30px;
            position: relative;
        }

        /* Button Styling - Enhanced Brown Theme */
        .btn-primary {
            background: linear-gradient(135deg, #8b5e3c 0%, #6d4a31 100%);
            border: none;
            padding: 18px 24px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 12px;
            transition: all 0.3s ease;
            width: 100%;
            color: white;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(139, 94, 60, 0.3);
        }

        .btn-primary:before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #a0724d 0%, #8b5e3c 100%);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(139, 94, 60, 0.4);
        }

        .btn-primary:hover:before {
            left: 100%;
        }

        .btn-primary:active {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(139, 94, 60, 0.3);
        }

        .btn-primary:disabled {
            background: linear-gradient(135deg, #a0a0a0 0%, #888888 100%);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        /* Error Messages */
        .text-danger {
            font-size: 13px;
            margin-top: 8px;
            color: #dc3545;
            display: block;
            position: absolute;
            bottom: -25px;
            left: 0;
            font-weight: 500;
        }

        /* Alert */
        .alert {
            padding: 15px 20px;
            border-radius: 12px;
            margin-top: 25px;
            text-align: center;
            font-size: 14px;
            animation: fadeIn 0.5s ease;
            font-weight: 500;
        }

        .alert-danger {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            border: 2px solid #f5c6cb;
            color: #721c24;
        }

        /* Link */
        .text-center {
            text-align: center;
            margin-top: 30px;
            font-size: 15px;
            color: #6c757d;
        }

        .text-center a {
            color: #8b5e3c;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
        }

        .text-center a:hover {
            color: #6d4a31;
            text-decoration: none;
        }

        .text-center a:after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -2px;
            left: 50%;
            background-color: #8b5e3c;
            transition: all 0.3s ease;
        }

        .text-center a:hover:after {
            width: 100%;
            left: 0;
        }

        /* Animation */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .content-main {
                max-width: 420px;
            }
            
            .card-login {
                padding: 35px;
                border-radius: 18px;
            }
            
            .card-title {
                font-size: 26px;
                margin-bottom: 30px;
            }
            
            .form-control {
                padding: 16px 20px;
                font-size: 16px;
                height: 55px;
            }
            
            .btn-primary {
                padding: 16px 20px;
                font-size: 15px;
            }
        }

        @media (max-width: 576px) {
            body {
                padding: 10px;
            }
            
            .content-main {
                max-width: 100%;
            }
            
            .card-login {
                padding: 25px;
                border-radius: 15px;
                margin: 10px 0;
            }
            
            .card-title {
                font-size: 24px;
                margin-bottom: 25px;
                padding-bottom: 15px;
            }
            
            .card-title:after {
                width: 50px;
                height: 3px;
            }
            
            .form-control {
                padding: 14px 18px;
                font-size: 15px;
                height: 50px;
                border-radius: 10px;
            }
            
            .btn-primary {
                padding: 14px 18px;
                font-size: 14px;
                border-radius: 10px;
                letter-spacing: 1px;
            }
            
            .mb-3 {
                margin-bottom: 25px;
            }
            
            .text-center {
                font-size: 14px;
                margin-top: 25px;
            }
        }

        @media (max-width: 480px) {
            .card-login {
                padding: 20px;
            }
            
            .card-title {
                font-size: 22px;
            }
            
            .form-control {
                padding: 12px 16px;
                height: 48px;
            }
            
            .btn-primary {
                padding: 12px 16px;
            }
        }

        @media (max-width: 360px) {
            body {
                padding: 5px;
            }
            
            .card-login {
                padding: 15px;
            }
            
            .card-title {
                font-size: 20px;
            }
        }

        /* Landscape orientation on mobile */
        @media (max-height: 500px) and (orientation: landscape) {
            body {
                padding: 10px;
            }
            
            .card-login {
                padding: 20px;
            }
            
            .card-title {
                font-size: 22px;
                margin-bottom: 20px;
            }
            
            .mb-3 {
                margin-bottom: 20px;
            }
            
            .text-center {
                margin-top: 20px;
            }
        }
    </style>
</head>
<body>
    <section class="content-main">
        <div class="card card-login">
            <div class="card-body">
                <h4 class="card-title">Reset Password</h4>
                <form id="resetPasswordForm" method="POST" action="/reset-password" onsubmit="return validateForm(event)">
                    <div class="mb-3 position-relative">
                        <input class="form-control" name="newPass1" id="newPass1" placeholder="Enter new password" type="password" required>
                        <div id="newPass1Error" class="text-danger"></div>
                    </div>
                    <div class="mb-3 position-relative">
                        <input class="form-control" name="newPass2" id="newPass2" placeholder="Re-enter new password" type="password" required>
                        <div id="newPass2Error" class="text-danger"></div>
                    </div>
                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary">Reset Password</button>
                    </div>
                    <% if (typeof message !== 'undefined' && message && message.length > 0) { %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                    <% } %>
                </form>
                <p class="text-center">Remember your password? <a href="/login">Login here</a></p>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    function validateForm(event) {
        event.preventDefault();
        let valid = true;
        const newPass1 = document.getElementById('newPass1');
        const newPass2 = document.getElementById('newPass2');
        const newPass1Error = document.getElementById('newPass1Error');
        const newPass2Error = document.getElementById('newPass2Error');

        newPass1Error.textContent = '';
        newPass2Error.textContent = '';

        if (!newPass1.value.trim()) {
            newPass1Error.textContent = 'Password cannot be empty.';
            valid = false;
        } else if (newPass1.value.length < 6) {
            newPass1Error.textContent = 'Password must be at least 6 characters long.';
            valid = false;
        }

        if (!newPass2.value.trim()) {
            newPass2Error.textContent = 'Please re-enter your password.';
            valid = false;
        } else if (newPass2.value !== newPass1.value) {
            newPass2Error.textContent = 'Passwords do not match.';
            valid = false;
        }

        if (valid) {
            // Show loading state
            const submitButton = document.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            submitButton.disabled = true;
            submitButton.textContent = "Processing...";
            
            // Submit form via AJAX
            $.ajax({
                type: 'POST',
                url: '/reset-password',
                data: {
                    newPass1: newPass1.value,
                    newPass2: newPass2.value
                },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response.message,
                            timer: 2000,
                            showConfirmButton: false,
                            confirmButtonColor: '#8b5e3c'
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                            confirmButtonColor: '#8b5e3c'
                        });
                        submitButton.disabled = false;
                        submitButton.textContent = originalText;
                    }
                },
                error: function(xhr) {
                    const response = xhr.responseJSON || {};
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message || 'An error occurred. Please try again.',
                        confirmButtonColor: '#8b5e3c'
                    });
                    submitButton.disabled = false;
                    submitButton.textContent = originalText;
                }
            });
        }
        return false;
    }
    </script>
</body>
</html>