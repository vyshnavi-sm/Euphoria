 }

 .pagination .btn.active {
   background-color: #5C4033;
   color: white;
   border-color: #5C4033;
 }

 .price-filter {
   padding: 10px;
   background-color: #f9f9f9;
   border-radius: 8px;
   margin-top: 20px;
 }

 .price-filter .price-options {
   display: flex;
   flex-direction: column;
   gap: 10px;
 }

 .price-button {
   padding: 12px 20px;
   background-color: #f1f1f1;
   color: #333;
   border: 1px solid #ddd;
   border-radius: 30px;
   cursor: pointer;
   transition: all 0.3s ease;
   text-align: center;
   font-size: 14px;
