 }

 .price-button:hover {
   background-color: #5C4033;
   color: white;
   transform: scale(1.05);
   border-color: #5C4033;
 }

 .price-button.selected {
   background-color: #5C4033;
   color: white;
   border-color: #5C4033;
   box-shadow: 0 2px 8px rgba(92, 64, 51, 0.2);
   transform: scale(1.05);
 }

 .category-brand-container {
   text-align: center;
 }

 .category-brand-container ul {
