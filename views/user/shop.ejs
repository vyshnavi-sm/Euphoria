   cursor: not-allowed;
   transform: none;
   box-shadow: none;
 }

 .add-to-cart-btn i {
   font-size: 16px;
   transition: transform 0.3s ease;
 }

 .add-to-cart-btn:hover i {
   transform: scale(1.2);
 }

 .pagination {
   display: flex;
   justify-content: center;
   margin-top: 30px;
   gap: 10px;
 }

 .pagination .btn {
   padding: 8px 15px;
   border: 1px solid #ddd;
   border-radius: 4px;
   text-decoration: none;
   color: #333;
   transition: all 0.3s;
