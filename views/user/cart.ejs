    <script>
    async function loadCart() {
        try {
            const response = await fetch('/user/cart');
            const data = await response.json();
            
            if (!response.ok) {
                throw new Error(data.message);
            }
            
            const cartItemsContainer = document.getElementById('cart-items');
            cartItemsContainer.innerHTML = '';
            
            if (!data.cart || !data.cart.items || data.cart.items.length === 0) {
                showEmptyCart();
                return;
            }
            
            let subtotal = 0;
            data.cart.items.forEach(item => {
                const cartItem = createCartItem(item);
                cartItemsContainer.appendChild(cartItem);
                subtotal += item.totalPrice;
            });
            
            updateOrderSummary(subtotal);
        } catch (error) {
            console.error('Error loading cart:', error);
        }
    }

    function createCartItem(item) {
        const template = document.getElementById('cart-item-template');
        const cartItem = template.content.cloneNode(true);
        
        const image = cartItem.querySelector('.item-image');
        image.src = `/uploads/product-images/${item.productId.productImage[0]}`;
        image.alt = item.productId.productName;
        
        cartItem.querySelector('.item-title').textContent = item.productId.productName;
        cartItem.querySelector('.item-price').textContent = `₹${item.price}`;
        cartItem.querySelector('.quantity').textContent = item.quantity;
        
        const itemElement = cartItem.querySelector('.cart-item');
        itemElement.dataset.productId = item.productId._id;
        itemElement.dataset.price = item.price;
        
        return cartItem;
    }

    function showEmptyCart() {
        const cartItemsContainer = document.getElementById('cart-items');
        cartItemsContainer.innerHTML = `
            <div class="empty-cart">
                <i class="fas fa-shopping-cart empty-cart-icon"></i>
                <h2 class="empty-cart-title">Your cart is empty</h2>
                <p>Looks like you haven't added anything to your cart yet.</p>
                <a href="/shop" class="continue-btn mt-4">Continue Shopping</a>
            </div>
        `;
        updateOrderSummary(0);
    }

    async function updateQuantity(button, change) {
        const cartItem = button.closest('.cart-item');
        const quantitySpan = cartItem.querySelector('.quantity');
        const currentQuantity = parseInt(quantitySpan.textContent);
        const newQuantity = currentQuantity + change;
        
        if (newQuantity < 1) {
            Swal.fire({
                title: 'Minimum Quantity',
                text: 'The minimum quantity for any product is 1',
                icon: 'info',
                confirmButtonColor: '#5C4033'
            });
            return;
        }

        if (newQuantity > 5) {
            Swal.fire({
                title: 'Maximum Product Quantity',
                text: 'The maximum quantity per product is 5',
                icon: 'warning',
                confirmButtonColor: '#5C4033'
            });
            return;
        }
        
        try {
            const response = await fetch('/user/cart/update', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId: cartItem.dataset.productId,
                    quantity: newQuantity
                })
            });
            
            const data = await response.json();
            if (response.ok) {
                quantitySpan.textContent = newQuantity;
                updateItemTotal(cartItem, newQuantity);
            } else {
                if (data.message === 'Maximum total items in cart is 10') {
                    Swal.fire({
                        title: 'Cart Limit Reached',
                        text: 'You can only have a maximum of 10 items in your cart',
                        icon: 'warning',
                        confirmButtonColor: '#5C4033'
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message || 'Error updating quantity',
                        icon: 'error',
                        confirmButtonColor: '#5C4033'
                    });
                }
            }
        } catch (error) {
            console.error('Error updating quantity:', error);
            Swal.fire({
                title: 'Error',
                text: 'Error updating quantity',
                icon: 'error',
                confirmButtonColor: '#5C4033'
            });
        }
    }

    async function removeFromCart(button) {
        const cartItem = button.closest('.cart-item');
        const productId = cartItem.dataset.productId;
        
        try {
            const response = await fetch(`/user/cart/remove/${productId}`, {
                method: 'DELETE'
            });
            
            const data = await response.json();
            if (response.ok) {
                cartItem.remove();
                
                // Check if cart is empty
                const remainingItems = document.querySelectorAll('.cart-item');
                if (remainingItems.length === 0) {
                    const cartItemsContainer = document.getElementById('cart-items');
                    cartItemsContainer.innerHTML = `
                        <div class="empty-cart">
                            <i class="fas fa-shopping-cart empty-cart-icon"></i>
                            <h2 class="empty-cart-title">Your cart is empty</h2>
                            <p class="empty-cart-text">Looks like you haven't added anything to your cart yet.</p>
                            <a href="/shop" class="shop-btn">Continue Shopping</a>
                        </div>
                    `;
                }
                
                updateOrderSummary();
            } else {
                Swal.fire({
                    title: 'Error',
                    text: data.message || 'Error removing item',
                    icon: 'error',
                    confirmButtonColor: '#5C4033'
                });
            }
        } catch (error) {
            console.error('Error removing item:', error);
            Swal.fire({
                title: 'Error',
                text: 'Error removing item',
                icon: 'error',
                confirmButtonColor: '#5C4033'
            });
        }
    }

    function updateItemTotal(cartItem, quantity) {
        const price = parseFloat(cartItem.dataset.price);
        const total = price * quantity;
        cartItem.querySelector('.item-price').textContent = `₹${total.toFixed(2)}`;
        updateOrderSummary();
    }

    function updateOrderSummary() {
        const cartItems = document.querySelectorAll('.cart-item');
        let subtotal = 0;
        
        cartItems.forEach(item => {
            const price = parseFloat(item.dataset.price);
            const quantity = parseInt(item.querySelector('.quantity').textContent);
            const itemTotal = price * quantity;
            subtotal += itemTotal;
        });
        
        const shipping = subtotal > 0 ? 50 : 0;
        const total = subtotal + shipping;
        
        document.getElementById('subtotal').textContent = `₹${subtotal.toFixed(2)}`;
        document.getElementById('shipping').textContent = `₹${shipping.toFixed(2)}`;
        document.getElementById('total').textContent = `₹${total.toFixed(2)}`;
        
        // Update checkout button state
        const checkoutButton = document.querySelector('.checkout-btn');
        if (checkoutButton) {
            checkoutButton.disabled = subtotal <= 0;
        }
    }

    function proceedToCheckout() {
        const total = parseFloat(document.getElementById('total').textContent.replace('₹', ''));
        if (total <= 0) {
            showToast('Your cart is empty', 'error');
            return;
        }
        window.location.href = '/user/checkout';
    }

    function showToast(message, type = 'success') {
        Swal.fire({
            text: message,
            icon: type,
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            background: type === 'success' ? '#5C4033' : '#dc3545',
            color: '#fff'
        });
    }

    // Load cart when page loads
    document.addEventListener('DOMContentLoaded', loadCart);


  

