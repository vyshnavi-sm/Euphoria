                        <h2 class="summary-title">Order Summary</h2>
                        <div class="summary-item">
                            <span>Subtotal</span>
                            <span id="subtotal">‚Çπ<%= cart.items ? cart.items.reduce((sum, item) => sum + item.totalPrice, 0).toFixed(2) : '0.00' %></span>
                        </div>
                        <div class="summary-item">
                            <span>Shipping</span>
                            <span id="shipping">‚Çπ<%= cart.items && cart.items.length > 0 ? (cart.items.reduce((sum, item) => sum + item.totalPrice, 0) >= 1000 ? '0.00' : '50.00') : '0.00' %></span>
                        </div>
                        <div class="summary-item total">
                            <span>Total</span>
                            <span id="total">‚Çπ<%= cart.items && cart.items.length > 0 ? (cart.items.reduce((sum, item) => sum + item.totalPrice, 0) + (cart.items.reduce((sum, item) => sum + item.totalPrice, 0) >= 1000 ? 0 : 50)).toFixed(2) : '0.00' %></span>
                        </div>
                        <div class="cart-actions">
                            <a href="/shop" class="btn btn-primary continue-shopping">
                                <i class="fas fa-arrow-left"></i> Continue Shopping
                            </a>
                            <a href="/user/checkout" class="btn btn-success checkout-btn">
                                Proceed to Checkout <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
