    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const plusButtons = document.querySelectorAll('.plus-btn');
            const minusButtons = document.querySelectorAll('.minus-btn');
            const removeButtons = document.querySelectorAll('.remove-btn');
            const checkoutButton = document.querySelector('.checkout-btn');

            if (checkoutButton) {
                const subtotal = parseFloat(document.getElementById('subtotal').textContent.replace('‚Çπ', ''));
                if (subtotal === 0) {
                    checkoutButton.disabled = true;
                }
            }

            plusButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const productId = button.dataset.id;
                    updateQuantity(productId, 1);
                });
            });

            minusButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const productId = button.dataset.id;
                    const quantityElement = document.getElementById(`quantity-${productId}`);
                    const currentQuantity = parseInt(quantityElement.textContent, 10);
                    if (currentQuantity <= 1) {
                        Swal.fire({
                            title: 'Minimum Quantity!',
                            text: 'You cannot have less than 1 item. To remove, use the Remove button.',
                            icon: 'warning',
                            confirmButtonColor: '#5C4033',
                            confirmButtonText: 'OK'
                        });
                        return;
                    }
                    updateQuantity(productId, -1);
                });
            });

            removeButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const productId = button.dataset.id;
                    showRemoveConfirmation(productId);
                });
            });

            function showRemoveConfirmation(productId) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#5C4033',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, remove it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        removeItem(productId);
                    }
                });
            }

            async function updateQuantity(productId, change) {
                try {
                    const response = await fetch('/user/cart/update', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, change })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        // Update the quantity display
                        const quantityElement = document.getElementById(`quantity-${productId}`);
                        if (quantityElement) {
                            quantityElement.textContent = data.newQuantity;
                        }
                        
                        // Remove item if quantity becomes 0
                        if (data.newQuantity === 0) {
                            const itemElement = document.getElementById(`cart-item-${productId}`);
                            if (itemElement) {
                                itemElement.remove();
                            }
                        }
                        
                        // Update cart summary
                        updateCartSummary(data.cart);
                        showToast('Cart updated successfully');
                        
                        // Reload page if cart is empty
                        if (data.cart.items.length === 0) {
                            location.reload();
                        }
                    } else {
                        // Show SweetAlert for specific error types
                        if (data.errorType === 'quantity_limit') {
                            Swal.fire({
                                title: 'Quantity Limit Reached!',
                                text: 'You can only add up to 5 items of the same product.',
                                icon: 'warning',
                                confirmButtonColor: '#5C4033',
                                confirmButtonText: 'OK'
                            });
                        } else if (data.errorType === 'cart_limit') {
                            Swal.fire({
                                title: 'Cart Limit Reached!',
                                text: 'You can only have up to 10 items total in your cart.',
                                icon: 'warning',
                                confirmButtonColor: '#5C4033',
                                confirmButtonText: 'OK'
                            });
                        } else if (data.errorType === 'stock_limit') {
                            Swal.fire({
                                title: 'Stock Limit Reached!',
                                text: 'The requested quantity exceeds available stock.',
                                icon: 'warning',
                                confirmButtonColor: '#5C4033',
                                confirmButtonText: 'OK'
                            });
                        } else {
                            showToast(data.message || 'Failed to update cart', 'error');
                        }
                    }
                } catch (error) {
                    console.error('Error updating quantity:', error);
                    showToast('An error occurred. Please try again.', 'error');
                }
            }

            async function removeItem(productId) {
                try {
                    const response = await fetch('/user/cart/remove', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId })
                    });
                    const data = await response.json();
                    if (data.success) {
                        const itemElement = document.getElementById(`cart-item-${productId}`);
                        if (itemElement) itemElement.remove();
                        updateCartSummary(data.cart);
                        Swal.fire(
                            'Removed!',
                            'Your item has been removed from the cart.',
                            'success'
                        );
                        
                        // Reload page if cart is empty
                        if (data.cart.items.length === 0) {
                            location.reload();
                        }
                    } else {
                        Swal.fire(
                            'Error!',
                            data.message || 'Could not remove the item.',
                            'error'
                        );
                    }
                } catch (error) {
                    console.error('Error removing item:', error);
                    Swal.fire(
                        'Error!',
                        'An error occurred. Please try again.',
                        'error'
                    );
                }
            }

            function updateCartSummary(cart) {
                if (!cart || !cart.items) return;
                
                const subtotal = cart.items.reduce((sum, item) => sum + item.totalPrice, 0);
                const shipping = subtotal >= 1000 || subtotal === 0 ? 0 : 50;
                const total = subtotal + shipping;
                
                const subtotalElement = document.getElementById('subtotal');
                const shippingElement = document.getElementById('shipping');
                const totalElement = document.getElementById('total');
                
                if (subtotalElement) subtotalElement.textContent = `‚Çπ${subtotal.toFixed(2)}`;
                if (shippingElement) shippingElement.textContent = `‚Çπ${shipping.toFixed(2)}`;
                if (totalElement) totalElement.textContent = `‚Çπ${total.toFixed(2)}`;
                
                if (checkoutButton) {
                    checkoutButton.disabled = subtotal === 0;
                }
            }

            function showToast(message, type = 'success') {
                const toast = document.createElement('div');
                toast.className = `toast ${type}`;
                toast.textContent = message;
                document.body.appendChild(toast);
                setTimeout(() => {
                    toast.remove();
                }, 3000);
            }
        });
    </script>
